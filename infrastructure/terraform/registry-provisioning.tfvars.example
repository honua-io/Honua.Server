# Honua Build Orchestrator - Terraform Variables Example
#
# Copy this file to `terraform.tfvars` and fill in the appropriate values
# for your environment.
#
# cp registry-provisioning.tfvars.example terraform.tfvars
#

# AWS Configuration
# -----------------

# Primary AWS region for build orchestrator resources
aws_region = "us-east-1"

# List of AWS regions where customer ECR repositories can be created
# These should align with your multi-region deployment strategy
allowed_ecr_regions = [
  "us-east-1",
  "us-west-2",
  "eu-west-1",
  "ap-southeast-1"
]

# Azure Configuration
# -------------------

# Primary Azure location for build orchestrator resources
azure_location = "eastus"

# GCP Configuration
# -----------------

# GCP project ID where build orchestrator resources will be created
# Replace with your actual GCP project ID
gcp_project_id = "honua-production-12345"

# Primary GCP region for build orchestrator resources
gcp_region = "us-central1"

# GitHub Configuration
# --------------------

# GitHub organization name for repository access
# The GitHub App will be created under this organization
github_org = "honua-io"

# Environment Configuration
# -------------------------

# Environment name (dev, staging, production)
# This is used for resource naming and tagging
environment = "production"

# Name of the build orchestrator service
# Used for IAM role, managed identity, and service account naming
orchestrator_service_name = "honua-build-orchestrator"

# Resource Tags
# -------------

# Common tags to apply to all resources
# Add additional tags as needed for your organization
tags = {
  Project     = "Honua"
  ManagedBy   = "Terraform"
  Component   = "BuildOrchestrator"
  Environment = "production"
  CostCenter  = "engineering"
  Owner       = "platform-team@honua.io"
}
