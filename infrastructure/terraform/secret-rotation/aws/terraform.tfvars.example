# ============================================================================
# AWS Secret Rotation - Terraform Variables Example
# ============================================================================
# Copy this file to terraform.tfvars and fill in your values
# ============================================================================

# Environment Configuration
environment  = "prod"
project_name = "honua"

# Rotation Configuration
rotation_days = 90 # Rotate secrets every 90 days

# Notification Configuration
notification_email = "security@your-domain.com"

# PostgreSQL Configuration
postgres_host            = "honua-db.abc123.us-east-1.rds.amazonaws.com"
postgres_port            = 5432
postgres_database        = "honua"
postgres_master_username = "postgres"
postgres_master_password = "YourSuperSecureMasterPassword123!"
postgres_app_username    = "honua_app"

# API Configuration
api_endpoint = "your-api.honua.io"

# Optional: VPC Configuration (if database is in VPC)
# subnet_ids         = ["subnet-abc123", "subnet-def456"]
# security_group_ids = ["sg-abc123"]

# Optional: Additional Tags
tags = {
  CostCenter = "Engineering"
  Owner      = "Platform Team"
  Compliance = "SOC2"
}
