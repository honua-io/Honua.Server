# AWS Production Environment Variables
# Copy to terraform.tfvars and customize

aws_region          = "us-east-1"
container_image_uri = "123456789012.dkr.ecr.us-east-1.amazonaws.com/honua:v1.2.3"

# SSL certificates (ALB cert can be in any region, CloudFront must be us-east-1)
ssl_certificate_arn       = "arn:aws:acm:us-east-1:123456789012:certificate/12345678-..."
cloudfront_certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/87654321-..."

# Custom domains
custom_domains = ["api.honua.io", "gis.honua.io"]

# CORS
cors_origins = ["https://honua.io", "https://app.honua.io"]

# Logging buckets (create these first)
alb_logs_bucket        = "honua-alb-logs-prod.s3.amazonaws.com"
cloudfront_logs_bucket = "honua-cloudfront-logs-prod.s3.amazonaws.com"

# WAF (optional, create separately)
waf_web_acl_arn = "arn:aws:wafv2:us-east-1:123456789012:global/webacl/honua-waf/..."
