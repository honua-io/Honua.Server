# ============================================================================
# Terraform State Backend Configuration - Example Variables
# ============================================================================
# Copy this file to terraform.tfvars and customize for your environment
#
# Usage:
#   1. cp terraform.tfvars.example terraform.tfvars
#   2. Update values below
#   3. terraform init
#   4. terraform apply
#   5. Update your project's backend configuration with the outputs
# ============================================================================

# S3 bucket name (must be globally unique)
# If not specified, will auto-generate: honua-terraform-state-{account-id}-{region}
state_bucket_name = "my-org-honua-terraform-state"

# DynamoDB table name for state locking
dynamodb_table_name = "honua-terraform-locks"

# AWS region for state backend
region = "us-east-1"

# Environment tag
environment = "shared"

# Enable Point-in-Time Recovery for DynamoDB (recommended for production)
enable_point_in_time_recovery = true

# Enable cross-region replication for disaster recovery (recommended for production)
enable_bucket_replication = false
replication_region        = "us-west-2"

# Allow Terraform to destroy the bucket even if it contains state files
# WARNING: Set to false in production to prevent accidental deletion
force_destroy = false
