# ============================================================================
# Terraform State Backend Configuration - Azure - Example Variables
# ============================================================================
# Copy this file to terraform.tfvars and customize for your environment
#
# Usage:
#   1. cp terraform.tfvars.example terraform.tfvars
#   2. Update values below
#   3. az login
#   4. terraform init
#   5. terraform apply
#   6. Update your project's backend configuration with the outputs
# ============================================================================

# Azure region for state backend
location = "eastus"

# Environment tag
environment = "shared"

# Resource group name (if not specified, will be auto-generated)
# resource_group_name = "rg-honua-tfstate"

# Storage account name (if not specified, will be auto-generated)
# Must be 3-24 characters, lowercase letters and numbers only
# storage_account_name = "sthonuatfstate"

# Container name for state files
container_name = "tfstate"

# Enable blob versioning for state history (recommended)
enable_versioning = true

# Enable soft delete for state files (recommended for production)
enable_soft_delete             = true
soft_delete_retention_days     = 30

# Enable geo-redundant storage for disaster recovery (recommended for production)
# GRS = Geo-Redundant Storage (data replicated to secondary region)
# LRS = Locally-Redundant Storage (data replicated within same region, cheaper)
enable_geo_replication = false

# IP ranges allowed to access the storage account (empty = allow all)
# Example: ["1.2.3.4", "5.6.7.0/24"]
allowed_ip_ranges = []

# Enable private endpoint for enhanced security (recommended for production)
# Requires a virtual network and subnet
enable_private_endpoint = false
# virtual_network_id = "/subscriptions/.../virtualNetworks/my-vnet"
# subnet_id = "/subscriptions/.../subnets/my-subnet"
