@using Honua.MapSDK.Services.Drawing
@using Honua.MapSDK.Models
@using DrawingDrawingStyle = Honua.MapSDK.Services.Drawing.DrawingStyle
@inject IDrawingManager DrawingManager

<div class="honua-geometry-editor @CssClass" style="@Style">
    @if (SelectedGeometry != null)
    {
        <div class="editor-panel">
            <div class="editor-header">
                <h4>Edit Geometry</h4>
                <button class="close-button" @onclick="CloseEditor" aria-label="Close">√ó</button>
            </div>

            <div class="editor-content">
                <!-- Geometry Info -->
                <div class="geometry-info">
                    <div class="info-item">
                        <label>Type:</label>
                        <span>@SelectedGeometry.Type</span>
                    </div>
                    <div class="info-item">
                        <label>ID:</label>
                        <span class="geometry-id">@SelectedGeometry.Id.Substring(0, 8)...</span>
                    </div>
                </div>

                <!-- Properties Editor -->
                <div class="properties-section">
                    <h5>Properties</h5>
                    <div class="form-group">
                        <label for="name-input">Name</label>
                        <input id="name-input" type="text" @bind="EditedName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="description-input">Description</label>
                        <textarea id="description-input" @bind="EditedDescription" class="form-control" rows="3"></textarea>
                    </div>
                </div>

                <!-- Vertex Editor -->
                @if (ShowVertexEditor && SelectedGeometry.Type != GeometryType.Point)
                {
                    <div class="vertex-section">
                        <h5>Vertices</h5>
                        <div class="vertex-hint">
                            <small>Click vertices on the map to edit, or use the buttons below</small>
                        </div>
                        <!-- Vertex list would be populated dynamically based on geometry coordinates -->
                    </div>
                }

                <!-- Advanced Operations -->
                <div class="operations-section">
                    <h5>Operations</h5>

                    @if (ShowSplitOperation && CanSplit)
                    {
                        <button class="operation-button" @onclick="SplitGeometry" title="Split geometry at selected vertex">
                            <span>‚úÇÔ∏è</span> Split
                        </button>
                    }

                    @if (ShowMergeOperation && CanMerge)
                    {
                        <button class="operation-button" @onclick="MergeGeometries" title="Merge with another geometry">
                            <span>üîó</span> Merge
                        </button>
                    }

                    @if (ShowBufferOperation)
                    {
                        <div class="buffer-operation">
                            <label>Buffer Distance (m):</label>
                            <div class="buffer-controls">
                                <input type="number" @bind="BufferDistance" class="form-control" step="10" min="0" />
                                <button class="operation-button" @onclick="ApplyBuffer" title="Create buffer zone">
                                    <span>‚óØ</span> Buffer
                                </button>
                            </div>
                        </div>
                    }

                    @if (ShowSimplifyOperation && CanSimplify)
                    {
                        <div class="simplify-operation">
                            <label>Simplify Tolerance:</label>
                            <div class="simplify-controls">
                                <input type="range" @bind="SimplifyTolerance" min="0.0001" max="0.01" step="0.0001" />
                                <span>@SimplifyTolerance.ToString("F4")</span>
                                <button class="operation-button" @onclick="SimplifyGeometry" title="Simplify geometry">
                                    <span>‚Üì</span> Simplify
                                </button>
                            </div>
                        </div>
                    }

                    @if (ShowUnionOperation && CanUnion)
                    {
                        <button class="operation-button" @onclick="UnionGeometries" title="Union with another geometry">
                            <span>‚äî</span> Union
                        </button>
                    }

                    @if (ShowIntersectOperation && CanIntersect)
                    {
                        <button class="operation-button" @onclick="IntersectGeometries" title="Intersect with another geometry">
                            <span>‚äì</span> Intersect
                        </button>
                    }

                    @if (ShowDifferenceOperation && CanDifference)
                    {
                        <button class="operation-button" @onclick="DifferenceGeometries" title="Difference with another geometry">
                            <span>‚àí</span> Difference
                        </button>
                    }
                </div>

                <!-- Style Editor -->
                <div class="style-section">
                    <h5>Style</h5>
                    <div class="style-grid">
                        <div class="style-item">
                            <label>Stroke Color</label>
                            <input type="color" @bind="EditedStyle.StrokeColor" />
                        </div>
                        <div class="style-item">
                            <label>Stroke Width</label>
                            <input type="range" min="1" max="10" @bind="EditedStyle.StrokeWidth" />
                            <span>@EditedStyle.StrokeWidth px</span>
                        </div>
                        <div class="style-item">
                            <label>Fill Color</label>
                            <input type="color" @bind="EditedStyle.FillColor" />
                        </div>
                        <div class="style-item">
                            <label>Fill Opacity</label>
                            <input type="range" min="0" max="1" step="0.1" @bind="EditedStyle.FillOpacity" />
                            <span>@(EditedStyle.FillOpacity * 100)%</span>
                        </div>
                    </div>
                </div>

                <!-- Metadata -->
                @if (ShowMetadata)
                {
                    <div class="metadata-section">
                        <h5>Metadata</h5>
                        <div class="metadata-grid">
                            <div class="metadata-item">
                                <span class="metadata-label">Created:</span>
                                <span>@SelectedGeometry.CreatedAt.ToString("g")</span>
                            </div>
                            <div class="metadata-item">
                                <span class="metadata-label">Modified:</span>
                                <span>@SelectedGeometry.ModifiedAt.ToString("g")</span>
                            </div>
                            @if (!string.IsNullOrEmpty(SelectedGeometry.CreatedBy))
                            {
                                <div class="metadata-item">
                                    <span class="metadata-label">Created By:</span>
                                    <span>@SelectedGeometry.CreatedBy</span>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>

            <div class="editor-footer">
                <button class="btn-save" @onclick="SaveChanges">Save Changes</button>
                <button class="btn-cancel" @onclick="CancelChanges">Cancel</button>
                <button class="btn-delete" @onclick="DeleteGeometry">Delete</button>
            </div>
        </div>
    }
    else
    {
        <div class="editor-empty">
            <p>Select a geometry to edit</p>
        </div>
    }
</div>

@code {
    [Parameter]
    public string? CssClass { get; set; }

    [Parameter]
    public string? Style { get; set; }

    [Parameter]
    public bool ShowVertexEditor { get; set; } = true;

    [Parameter]
    public bool ShowSplitOperation { get; set; } = true;

    [Parameter]
