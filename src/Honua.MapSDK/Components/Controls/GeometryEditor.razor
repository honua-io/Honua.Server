    [Parameter]
    public EventCallback<DrawnGeometry> OnGeometryUpdated { get; set; }

    [Parameter]
    public EventCallback<string> OnGeometryDeleted { get; set; }

    private DrawnGeometry? SelectedGeometry => DrawingManager.SelectedGeometry;
    private string? EditedName { get; set; }
    private string? EditedDescription { get; set; }
    private DrawingDrawingStyle EditedStyle { get; set; } = DrawingDrawingStyle.Defaults.Polygon;
    private double BufferDistance { get; set; } = 100;
    private double SimplifyTolerance { get; set; } = 0.001;

    private bool CanSplit => SelectedGeometry?.Type == GeometryType.LineString || SelectedGeometry?.Type == GeometryType.Polygon;
    private bool CanMerge => DrawingManager.Geometries.Count > 1;
    private bool CanSimplify => SelectedGeometry?.Type == GeometryType.LineString || SelectedGeometry?.Type == GeometryType.Polygon;
    private bool CanUnion => DrawingManager.Geometries.Count > 1;
    private bool CanIntersect => DrawingManager.Geometries.Count > 1;
    private bool CanDifference => DrawingManager.Geometries.Count > 1;

    protected override void OnInitialized()
    {
        DrawingManager.GeometrySelected += OnGeometrySelected;
        DrawingManager.GeometryDeselected += OnGeometryDeselected;
    }

    protected override void OnParametersSet()
    {
        if (SelectedGeometry != null)
        {
            LoadGeometryForEditing();
        }
    }

    private void LoadGeometryForEditing()
    {
        if (SelectedGeometry == null) return;

        EditedName = SelectedGeometry.Name;
        EditedDescription = SelectedGeometry.Description;
        EditedStyle = SelectedGeometry.Style.Clone();
    }

    private async Task SaveChanges()
    {
        if (SelectedGeometry == null) return;

        // Update properties
        var properties = new Dictionary<string, object>(SelectedGeometry.Properties)
        {
            ["name"] = EditedName ?? "",
            ["description"] = EditedDescription ?? ""
        };

        await DrawingManager.UpdateGeometryPropertiesAsync(SelectedGeometry.Id, properties);
        await DrawingManager.UpdateGeometryStyleAsync(SelectedGeometry.Id, EditedStyle);

        SelectedGeometry.Name = EditedName;
        SelectedGeometry.Description = EditedDescription;

        await OnGeometryUpdated.InvokeAsync(SelectedGeometry);
        StateHasChanged();
    }

    private async Task CancelChanges()
    {
        await DrawingManager.DeselectGeometryAsync();
        StateHasChanged();
    }

    private async Task DeleteGeometry()
    {
        if (SelectedGeometry == null) return;

        if (await ConfirmDelete())
        {
            var id = SelectedGeometry.Id;
            await DrawingManager.DeleteGeometryAsync(id);
            await OnGeometryDeleted.InvokeAsync(id);
            StateHasChanged();
        }
    }

    private async Task CloseEditor()
    {
        await DrawingManager.DeselectGeometryAsync();
        StateHasChanged();
    }

