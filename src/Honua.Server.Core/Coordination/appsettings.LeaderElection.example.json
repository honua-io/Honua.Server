{
  "LeaderElection": {
    // Resource name identifies what is being coordinated
    // Different resources can have different leaders
    "ResourceName": "honua-server",

    // Leadership lease duration in seconds (default: 30)
    // After this time without renewal, leadership expires
    // Recommendation: 30-60 seconds in production
    "LeaseDurationSeconds": 30,

    // How often to renew the leadership lease in seconds (default: 10)
    // Should be less than LeaseDuration, typically LeaseDuration / 3
    // Recommendation: 10-20 seconds in production
    "RenewalIntervalSeconds": 10,

    // Redis key prefix for leader election locks
    // Full key format: {KeyPrefix}{ResourceName}
    "KeyPrefix": "honua:leader:",

    // Enable detailed logging for debugging (default: false)
    // Set to true in development or when troubleshooting
    "EnableDetailedLogging": false
  },

  // Redis configuration (required for leader election)
  "Redis": {
    // Single Redis instance
    "ConnectionString": "localhost:6379",

    // Redis with authentication
    // "ConnectionString": "redis-host:6379,password=your-password,ssl=true",

    // Redis Sentinel (recommended for production HA)
    // "ConnectionString": "redis-sentinel1:26379,redis-sentinel2:26379,redis-sentinel3:26379,serviceName=mymaster,password=your-password",

    // Redis Cluster
    // "ConnectionString": "redis-node1:6379,redis-node2:6379,redis-node3:6379,password=your-password"
  },

  // High Availability configuration (if using HA features)
  "HighAvailability": {
    "Enabled": true,
    "RedisConnectionString": "localhost:6379"
  },

  // Logging configuration for leader election
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Honua.Server.Core.Coordination": "Information"
    }
  }
}
