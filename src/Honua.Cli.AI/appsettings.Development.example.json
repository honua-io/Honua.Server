{
  "$schema": "https://json.schemastore.org/appsettings.json",
  "_comment": "Example Development Configuration",
  "_comment2": "Copy this to appsettings.Development.json and fill in your actual values",
  "_comment3": "appsettings.Development.json is in .gitignore and will not be committed",

  "ConnectionStrings": {
    "PostgreSQL": "Host=localhost;Port=5432;Database=honua_dev;Username=dev;Password=YOUR_DEV_PASSWORD"
  },

  "LlmProvider": {
    "Provider": "Azure",
    "MaxRetries": 3,
    "TimeoutSeconds": 30,

    "Azure": {
      "EndpointUrl": "https://YOUR-RESOURCE.openai.azure.com/",
      "ApiKey": "YOUR_API_KEY_HERE",
      "DeploymentName": "gpt-4-turbo",
      "EmbeddingDeploymentName": "text-embedding-3-large",
      "ApiVersion": "2024-02-01"
    },

    "OpenAI": {
      "ApiKey": "YOUR_OPENAI_API_KEY",
      "DefaultModel": "gpt-4",
      "EmbeddingModel": "text-embedding-3-large"
    },

    "LocalAI": {
      "Endpoint": "http://localhost:8080",
      "DefaultModel": "phi-2"
    }
  },

  "VectorSearch": {
    "Provider": "Postgres",
    "Postgres": {
      "ConnectionString": "Host=localhost;Database=honua_dev;Username=dev;Password=YOUR_DEV_PASSWORD",
      "TableName": "vector_embeddings"
    }
  },

  "Redis": {
    "ConnectionString": "localhost:6379",
    "InstanceName": "honua-dev:"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Information",
      "System": "Information"
    }
  }
}
