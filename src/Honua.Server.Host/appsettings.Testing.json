{
  "_TESTING_ENVIRONMENT": "This configuration is optimized for automated testing with all features enabled",

  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "Honua": {
    "ConfigurationV2": {
      "Path": "/home/mike/projects/Honua.Server/honua.test.config.hcl"
    },

    "authentication": {
      "mode": "QuickStart",
      "enforce": false,
      "quickStart": {
        "enabled": true,
        "_comment": "QuickStart mode bypasses authentication for testing"
      },
      "allowQuickStart": true,
      "provider": "SQLite",
      "sqlite": {
        "databasePath": "/app/data/auth/auth.db"
      }
    },

    "Services": {
      "Stac": {
        "Enabled": true,
        "Provider": "sqlite",
        "ConnectionString": "Data Source=/tmp/stac-catalog.db",
        "FilePath": "/tmp/stac-catalog.db",
        "_comment": "STAC enabled for STAC tests"
      },
      "ogc": {
        "features": { "enabled": true },
        "tiles": { "enabled": true },
        "processes": { "enabled": true },
        "coverages": { "enabled": true }
      },
      "wms": { "enabled": true },
      "wfs": { "enabled": true },
      "wmts": { "enabled": true },
      "wcs": { "enabled": true },
      "csw": { "enabled": true },
      "geoservices": { "enabled": true },
      "carto": { "enabled": true },
      "xyz": { "enabled": true },
      "openrosa": { "enabled": true }
    },

    "formats": {
      "geojson": { "enabled": true },
      "geoarrow": { "enabled": true },
      "flatgeobuf": { "enabled": true },
      "geopackage": { "enabled": true },
      "shapefile": { "enabled": true },
      "csv": { "enabled": true },
      "mvt": { "enabled": true }
    },

    "enterprise": {
      "sensorThings": {
        "enabled": true,
        "anomalyDetection": {
          "enabled": false,
          "checkInterval": "00:05:00",
          "staleSensorDetection": {
            "enabled": true,
            "staleThreshold": "01:00:00",
            "thresholdOverrides": {
              "traffic_count": "00:30:00",
              "air_quality": "00:15:00"
            }
          },
          "unusualReadingDetection": {
            "enabled": true,
            "standardDeviationThreshold": 3.0,
            "minimumObservationCount": 10,
            "statisticalWindow": "1.00:00:00",
            "thresholdOverrides": {
              "temperature": 2.5
            },
            "minimumCountOverrides": {
              "wind_speed": 20
            }
          },
          "alertDelivery": {
            "webhookUrl": null,
            "additionalWebhooks": [],
            "webhookTimeout": "00:00:30",
            "enableRetries": true,
            "maxRetries": 3,
            "retryDelay": "00:00:05"
          },
          "rateLimit": {
            "enabled": true,
            "maxAlertsPerDatastream": 5,
            "rateLimitWindow": "01:00:00",
            "maxTotalAlerts": 100
          }
        }
      },
      "geoprocessing": {
        "enabled": true
      },
      "events": {
        "geofencing": { "enabled": true }
      }
    }
  },

  "ConnectionStrings": {
    "HonuaDb": "Data Source=/app/data/ogc-sample.db",
    "StacCatalogDb": "Data Source=/tmp/stac-catalog.db",
    "SensorThingsDb": "Host=postgres-test-shared;Port=5432;Database=honua_test;Username=postgres;Password=test"
  },

  "Redis": {
    "Enabled": false,
    "_comment": "Redis disabled for testing - not required"
  },

  "OutputCaching": {
    "Enabled": false,
    "_comment": "Output caching disabled for testing - ensures fresh responses"
  },

  "Telemetry": {
    "Enabled": false,
    "_comment": "Telemetry disabled for testing"
  },

  "ApiVersioning": {
    "DefaultVersion": "v1",
    "AllowLegacyUrls": true,
    "LegacyRedirectVersion": "v1",
    "_comment": "Legacy URL support enabled for backward compatibility in tests"
  },

  "FeatureFlags": {
    "EnableGeoArrowExport": true,
    "EnableFlatGeobufExport": true,
    "EnableMVTExport": true,
    "EnableAdvancedGeoprocessing": true,
    "EnableVectorSearch": false,
    "_comment": "All export formats enabled for comprehensive testing"
  }
}
