{
  "RequestResponseLogging": {
    "LogRequests": true,
    "LogResponses": true,
    "LogHeaders": false,
    "LogRequestBody": false,
    "SlowRequestThresholdMs": 5000,
    "RedactionOptions": {
      "RedactHeaders": true,
      "RedactQueryStrings": true,
      "RedactJsonBodies": true,
      "SensitiveFieldNames": [
        "authorization",
        "auth",
        "cookie",
        "set-cookie",
        "api_key",
        "apikey",
        "x-api-key",
        "access_token",
        "refresh_token",
        "token",
        "password",
        "passwd",
        "pwd",
        "secret",
        "client_secret",
        "private_key",
        "encryption_key",
        "credentials",
        "credential",
        "ssn",
        "credit_card",
        "cvv",
        "pin"
      ],
      "SensitiveFieldPatterns": [
        ".*password.*",
        ".*secret.*",
        ".*token.*",
        ".*api[_-]?key.*",
        ".*auth.*",
        ".*credential.*",
        ".*private[_-]?key.*"
      ]
    }
  }
}
