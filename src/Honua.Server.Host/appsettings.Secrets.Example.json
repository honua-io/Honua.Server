{
  "Secrets": {
    "// Comment": "This file contains example configurations for all supported secrets providers.",
    "// Note": "Copy this file and remove the provider configurations you're not using.",

    "// Common Settings": "These apply to all providers",
    "Provider": "Local",
    "EnableCaching": true,
    "CacheDurationSeconds": 300,
    "ThrowOnError": false,

    "// Azure Key Vault Configuration": "For Azure cloud deployments",
    "AzureKeyVault": {
      "VaultUri": "https://your-vault-name.vault.azure.net/",
      "TenantId": "00000000-0000-0000-0000-000000000000",
      "ClientId": "00000000-0000-0000-0000-000000000000",
      "ClientSecret": "your-client-secret-here",
      "UseManagedIdentity": true,
      "TimeoutSeconds": 30,
      "MaxRetries": 3,
      "// Notes": [
        "For production, use UseManagedIdentity: true and remove ClientId/ClientSecret",
        "For development, use Azure CLI: az login",
        "Required permissions: Get, List for secrets and certificates"
      ]
    },

    "// AWS Secrets Manager Configuration": "For AWS cloud deployments",
    "AwsSecretsManager": {
      "Region": "us-east-1",
      "AccessKeyId": "AKIAIOSFODNN7EXAMPLE",
      "SecretAccessKey": "wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY",
      "SessionToken": "session-token-for-temporary-credentials",
      "ProfileName": "default",
      "RoleArn": "arn:aws:iam::123456789012:role/YourRole",
      "TimeoutSeconds": 30,
      "MaxRetries": 3,
      "// Notes": [
        "For production, use IAM roles (remove AccessKeyId/SecretAccessKey)",
        "For development, use AWS CLI: aws configure",
        "Required IAM permissions: secretsmanager:GetSecretValue, secretsmanager:DescribeSecret"
      ]
    },

    "// HashiCorp Vault Configuration": "For on-premises or Kubernetes deployments",
    "Vault": {
      "Address": "https://vault.example.com:8200",
      "Token": "hvs.CAESIJ...",
      "Namespace": "admin",
      "MountPoint": "secret",
      "KvVersion": 2,
      "RoleId": "your-role-id",
      "SecretId": "your-secret-id",
      "KubernetesTokenPath": "/var/run/secrets/kubernetes.io/serviceaccount/token",
      "KubernetesRole": "honua-server",
      "TimeoutSeconds": 30,
      "MaxRetries": 3,
      "SkipTlsVerify": false,
      "// Notes": [
        "Choose ONE authentication method: Token, AppRole (RoleId+SecretId), or Kubernetes",
        "KvVersion: 2 is recommended (supports versioning)",
        "Set SkipTlsVerify: true ONLY in development with self-signed certificates"
      ]
    },

    "// Local Development Configuration": "For development environments only",
    "Local": {
      "SecretsFilePath": "secrets.json",
      "EncryptFile": true,
      "WatchForChanges": true,
      "UseUserSecrets": true,
      "UserSecretsId": "Honua.Server.Host",
      "// Notes": [
        "SecretsFilePath: Path to local secrets file (relative or absolute)",
        "EncryptFile: Encrypts the file using Data Protection (recommended)",
        "UseUserSecrets: Enables .NET user secrets (recommended for development)",
        "To set user secrets: dotnet user-secrets set 'SecretName' 'SecretValue'"
      ]
    }
  },

  "// Example Secrets Structure": "How to organize secrets in your provider",
  "ExampleSecrets": {
    "ConnectionStrings:DefaultConnection": "Server=localhost;Database=honua;User Id=honua;Password=...;",
    "ConnectionStrings:RedisConnection": "localhost:6379",
    "ApiKeys:OpenAI": "sk-...",
    "ApiKeys:GoogleMaps": "AIza...",
    "ApiKeys:Stripe": "sk_test_...",
    "Certificates:Signing": "base64-encoded-certificate-data",
    "OAuth:GitHub:ClientId": "your-client-id",
    "OAuth:GitHub:ClientSecret": "your-client-secret"
  },

  "// Environment-Specific Configuration": "Override in appsettings.{Environment}.json",
  "EnvironmentExamples": {
    "Development": {
      "Secrets": {
        "Provider": "Local",
        "Local": {
          "UseUserSecrets": true
        }
      }
    },
    "Staging": {
      "Secrets": {
        "Provider": "AzureKeyVault",
        "AzureKeyVault": {
          "VaultUri": "https://honua-staging.vault.azure.net/",
          "UseManagedIdentity": true
        }
      }
    },
    "Production": {
      "Secrets": {
        "Provider": "AzureKeyVault",
        "AzureKeyVault": {
          "VaultUri": "https://honua-prod.vault.azure.net/",
          "UseManagedIdentity": true
        },
        "EnableCaching": true,
        "CacheDurationSeconds": 600
      }
    }
  }
}
