{
  "$schema": "appsettings.schema.json",
  "GeoEventQueue": {
    // Polling configuration
    "PollingIntervalSeconds": 5,
    "BatchSize": 10,

    // Retention policy
    "RetentionDays": 30,

    // Azure Service Bus integration (optional)
    "EnableServiceBus": false,
    "ServiceBusConnectionString": "",
    "ServiceBusTopicName": "geofence-events"
  },

