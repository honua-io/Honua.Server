<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:HonuaField.Models.FormBuilder"
             x:Class="HonuaField.Controls.FormFields.BooleanFormFieldControl"
             x:DataType="models:BooleanFormField">

    <VerticalStackLayout Spacing="4">
        <!-- Switch with Label -->
        <HorizontalStackLayout Spacing="12">
            <Switch IsToggled="{Binding Value, Mode=TwoWay}"
                    IsEnabled="{Binding IsReadOnly, Converter={StaticResource InvertedBoolConverter}}"
                    VerticalOptions="Center" />

            <Label VerticalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="{Binding Label}" FontAttributes="Bold" />
                        <Span Text=" *" TextColor="Red" IsVisible="{Binding IsRequired}" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </HorizontalStackLayout>

        <!-- Help Text -->
        <Label Text="{Binding HelpText}"
               FontSize="12"
               TextColor="Gray"
               IsVisible="{Binding HelpText, Converter={StaticResource IsNotNullConverter}}" />

        <!-- Error Message -->
        <Label Text="{Binding ErrorMessage}"
               FontSize="12"
               TextColor="Red"
               IsVisible="{Binding HasError}" />
    </VerticalStackLayout>

</ContentView>
