{
  "dashboard": {
    "title": "Honua Server - SLO Overview",
    "tags": ["honua", "slo", "reliability"],
    "timezone": "browser",
    "editable": true,
    "refresh": "1m",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Availability (30 days)",
        "type": "gauge",
        "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "honua:availability:success_rate_30d * 100",
            "legendFormat": "Availability"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 99,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 99, "color": "red" },
                { "value": 99.9, "color": "yellow" },
                { "value": 99.95, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Error Budget Remaining",
        "type": "gauge",
        "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "honua:error_budget:remaining_percent_30d",
            "legendFormat": "Budget Remaining"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 10, "color": "orange" },
                { "value": 50, "color": "yellow" },
                { "value": 75, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "P95 Latency (5m)",
        "type": "gauge",
        "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "honua:latency:p95_5m",
            "legendFormat": "P95 Latency"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "min": 0,
            "max": 10000,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 4000, "color": "yellow" },
                { "value": 5000, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Cache Hit Rate (1h)",
        "type": "gauge",
        "gridPos": { "x": 18, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "honua:cache:hit_rate_1h * 100",
            "legendFormat": "Hit Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 80, "color": "yellow" },
                { "value": 90, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Availability Over Time",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "honua:availability:success_rate_5m * 100",
            "legendFormat": "5m"
          },
          {
            "expr": "honua:availability:success_rate_1h * 100",
            "legendFormat": "1h"
          },
          {
            "expr": "honua:availability:success_rate_1d * 100",
            "legendFormat": "1d"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2
            }
          },
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "SLO Target" },
              "properties": [
                { "id": "color", "value": { "mode": "fixed", "fixedColor": "red" } },
                { "id": "custom.lineStyle", "value": { "dash": [10, 5] } }
              ]
            }
          ]
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 6,
        "title": "Error Budget Burn Rate",
        "type": "timeseries",
        "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "honua:error_budget:burn_rate_5m",
            "legendFormat": "5m"
          },
          {
            "expr": "honua:error_budget:burn_rate_1h",
            "legendFormat": "1h"
          },
          {
            "expr": "honua:error_budget:burn_rate_6h",
            "legendFormat": "6h"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 7,
        "title": "Latency Percentiles",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "honua:latency:p50_5m",
            "legendFormat": "P50"
          },
          {
            "expr": "honua:latency:p95_5m",
            "legendFormat": "P95"
          },
          {
            "expr": "honua:latency:p99_5m",
            "legendFormat": "P99"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 8,
        "title": "Error Rates (5xx vs 4xx)",
        "type": "timeseries",
        "gridPos": { "x": 12, "y": 12, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "honua:errors:5xx_rate_5m * 100",
            "legendFormat": "5xx (Server Errors)"
          },
          {
            "expr": "honua:errors:4xx_rate_5m * 100",
            "legendFormat": "4xx (Client Errors)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 9,
        "title": "Database Query Latency (P95)",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 20, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "honua:database:query_duration_p95_5m",
            "legendFormat": "Overall P95"
          },
          {
            "expr": "honua:database:query_duration_p95_by_type_5m",
            "legendFormat": "{{query_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 10,
        "title": "Cache Performance",
        "type": "timeseries",
        "gridPos": { "x": 12, "y": 20, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "honua:cache:hit_rate_5m * 100",
            "legendFormat": "Hit Rate"
          },
          {
            "expr": "honua:cache:miss_rate_5m * 100",
            "legendFormat": "Miss Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 11,
        "title": "Top 5 Slowest Endpoints (P95)",
        "type": "table",
        "gridPos": { "x": 0, "y": 28, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "topk(5, honua:latency:p95_by_endpoint_5m)",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true
              },
              "renameByName": {
                "http_endpoint": "Endpoint",
                "Value": "P95 Latency (ms)"
              }
            }
          }
        ]
      },
      {
        "id": 12,
        "title": "Top 5 Endpoints by Error Rate",
        "type": "table",
        "gridPos": { "x": 12, "y": 28, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "topk(5, honua:errors:5xx_rate_by_endpoint_5m) * 100",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true
              },
              "renameByName": {
                "http_endpoint": "Endpoint",
                "Value": "Error Rate (%)"
              }
            }
          }
        ]
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "enable": true,
          "iconColor": "blue",
          "tags": ["deployment"],
          "type": "tags"
        },
        {
          "name": "Incidents",
          "datasource": "Prometheus",
          "enable": true,
          "iconColor": "red",
          "tags": ["incident"],
          "type": "tags"
        }
      ]
    }
  },
  "overwrite": true
}
