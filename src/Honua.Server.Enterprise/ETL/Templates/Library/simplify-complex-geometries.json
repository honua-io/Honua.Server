{
  "id": "simplify-complex-geometries",
  "name": "Simplify Complex Geometries",
  "description": "Reduce geometry complexity while preserving shape. Reduces file size and improves performance for web mapping.",
  "category": "Geometry Processing",
  "icon": "minimize",
  "difficulty": 0,
  "estimatedMinutes": 3,
  "tags": ["simplify", "generalize", "optimize", "performance"],
  "author": "HonuaIO",
  "version": "1.0",
  "isFeatured": true,
  "inputRequirements": [
    "Features with complex geometries"
  ],
  "expectedOutputs": [
    "Simplified geometries"
  ],
  "useCases": [
    "Optimizing data for web maps",
    "Reducing file sizes for distribution",
    "Creating generalized versions for small-scale maps"
  ],
  "nodes": [
    {
      "id": "source_1",
      "type": "postgis_source",
      "name": "Load Features",
      "description": "Read complex geometries",
      "parameters": {
        "connectionString": "Host=localhost;Database=gis;Username=gis;Password=gis",
        "tableName": "complex_features",
        "schemaName": "public"
      },
      "position": {
        "x": 100,
        "y": 100
      }
    },
    {
      "id": "geo_1",
      "type": "simplify",
      "name": "Simplify Geometry",
      "description": "Reduce vertex count",
      "parameters": {
        "tolerance": 10.0,
        "preserveTopology": true
      },
      "position": {
        "x": 300,
        "y": 100
      }
    },
    {
      "id": "sink_1",
      "type": "postgis_sink",
      "name": "Save Simplified",
      "description": "Store simplified features",
      "parameters": {
        "connectionString": "Host=localhost;Database=gis;Username=gis;Password=gis",
        "tableName": "simplified_features",
        "schemaName": "public",
        "srid": 4326,
        "createTable": true
      },
      "position": {
        "x": 500,
        "y": 100
      }
    }
  ],
  "edges": [
    {
      "from": "source_1",
      "to": "geo_1"
    },
    {
      "from": "geo_1",
      "to": "sink_1"
    }
  ],
  "parameters": {
    "sourceTable": {
      "name": "sourceTable",
      "type": "string",
      "description": "Input features table",
      "defaultValue": "complex_features",
      "required": true
    },
    "tolerance": {
      "name": "tolerance",
      "type": "number",
      "description": "Simplification tolerance (meters)",
      "defaultValue": 10.0,
      "required": true,
      "min": 0.1
    },
    "outputTable": {
      "name": "outputTable",
      "type": "string",
      "description": "Output simplified table",
      "defaultValue": "simplified_features",
      "required": true
    }
  }
}
