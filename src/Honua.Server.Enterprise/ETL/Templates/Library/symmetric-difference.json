{
  "id": "symmetric-difference",
  "name": "Symmetric Difference",
  "description": "Calculate symmetric difference (areas unique to each layer). Returns non-overlapping portions of both layers.",
  "category": "Overlay Operations",
  "icon": "compare",
  "difficulty": 1,
  "estimatedMinutes": 4,
  "tags": ["symmetric-difference", "xor", "overlay", "comparison"],
  "author": "HonuaIO",
  "version": "1.0",
  "inputRequirements": [
    "Two polygon layers"
  ],
  "expectedOutputs": [
    "Non-overlapping areas from both layers"
  ],
  "useCases": [
    "Finding changes between two time periods",
    "Identifying unique coverage areas",
    "Detecting boundary discrepancies"
  ],
  "nodes": [
    {
      "id": "source_1",
      "type": "postgis_source",
      "name": "Load Layer A",
      "description": "First layer",
      "parameters": {
        "connectionString": "Host=localhost;Database=gis;Username=gis;Password=gis",
        "tableName": "layer_a",
        "schemaName": "public"
      },
      "position": {
        "x": 100,
        "y": 80
      }
    },
    {
      "id": "source_2",
      "type": "postgis_source",
      "name": "Load Layer B",
      "description": "Second layer",
      "parameters": {
        "connectionString": "Host=localhost;Database=gis;Username=gis;Password=gis",
        "tableName": "layer_b",
        "schemaName": "public"
      },
      "position": {
        "x": 100,
        "y": 180
      }
    },
    {
      "id": "geo_1",
      "type": "symmetric_difference",
      "name": "Symmetric Difference",
      "description": "Calculate XOR of layers",
      "parameters": {
        "preserveAttributes": true
      },
      "position": {
        "x": 350,
        "y": 130
      }
    },
    {
      "id": "sink_1",
      "type": "postgis_sink",
      "name": "Save Results",
      "description": "Store unique areas",
      "parameters": {
        "connectionString": "Host=localhost;Database=gis;Username=gis;Password=gis",
        "tableName": "unique_areas",
        "schemaName": "public",
        "srid": 4326,
        "createTable": true
      },
      "position": {
        "x": 550,
        "y": 130
      }
    }
  ],
  "edges": [
    {
      "from": "source_1",
      "to": "geo_1",
      "toPort": "input_a"
    },
    {
      "from": "source_2",
      "to": "geo_1",
      "toPort": "input_b"
    },
    {
      "from": "geo_1",
      "to": "sink_1"
    }
  ],
  "parameters": {
    "layerA": {
      "name": "layerA",
      "type": "string",
      "description": "First layer table",
      "defaultValue": "layer_a",
      "required": true
    },
    "layerB": {
      "name": "layerB",
      "type": "string",
      "description": "Second layer table",
      "defaultValue": "layer_b",
      "required": true
    },
    "outputTable": {
      "name": "outputTable",
      "type": "string",
      "description": "Output unique areas table",
      "defaultValue": "unique_areas",
      "required": true
    }
  }
}
