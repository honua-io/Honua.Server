{
  "id": "boundary-extraction",
  "name": "Boundary Extraction",
  "description": "Extract polygon boundaries as line features. Convert polygon edges to linestrings for boundary analysis.",
  "category": "Geometry Processing",
  "icon": "border-outer",
  "difficulty": 0,
  "estimatedMinutes": 2,
  "tags": ["boundary", "edge", "line", "conversion"],
  "author": "HonuaIO",
  "version": "1.0",
  "inputRequirements": [
    "Polygon features"
  ],
  "expectedOutputs": [
    "Line features representing boundaries"
  ],
  "useCases": [
    "Analyzing administrative boundaries",
    "Creating fence/wall datasets from parcel boundaries",
    "Road network extraction from block polygons"
  ],
  "nodes": [
    {
      "id": "source_1",
      "type": "postgis_source",
      "name": "Load Polygons",
      "description": "Read polygon features",
      "parameters": {
        "connectionString": "Host=localhost;Database=gis;Username=gis;Password=gis",
        "tableName": "polygons",
        "schemaName": "public"
      },
      "position": {
        "x": 100,
        "y": 100
      }
    },
    {
      "id": "geo_1",
      "type": "boundary",
      "name": "Extract Boundaries",
      "description": "Convert to line features",
      "parameters": {
        "preserveAttributes": true
      },
      "position": {
        "x": 300,
        "y": 100
      }
    },
    {
      "id": "sink_1",
      "type": "postgis_sink",
      "name": "Save Boundaries",
      "description": "Store boundary lines",
      "parameters": {
        "connectionString": "Host=localhost;Database=gis;Username=gis;Password=gis",
        "tableName": "boundaries",
        "schemaName": "public",
        "srid": 4326,
        "createTable": true
      },
      "position": {
        "x": 500,
        "y": 100
      }
    }
  ],
  "edges": [
    {
      "from": "source_1",
      "to": "geo_1"
    },
    {
      "from": "geo_1",
      "to": "sink_1"
    }
  ],
  "parameters": {
    "sourceTable": {
      "name": "sourceTable",
      "type": "string",
      "description": "Input polygons table",
      "defaultValue": "polygons",
      "required": true
    },
    "outputTable": {
      "name": "outputTable",
      "type": "string",
      "description": "Output boundaries table",
      "defaultValue": "boundaries",
      "required": true
    }
  }
}
