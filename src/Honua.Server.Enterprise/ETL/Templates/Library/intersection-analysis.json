{
  "id": "intersection-analysis",
  "name": "Intersection Analysis",
  "description": "Find geometric intersections between two feature layers. Returns only the overlapping areas with combined attributes.",
  "category": "Overlay Operations",
  "icon": "overlap",
  "difficulty": 1,
  "estimatedMinutes": 4,
  "tags": ["intersection", "overlay", "spatial-join"],
  "author": "HonuaIO",
  "version": "1.0",
  "isFeatured": true,
  "inputRequirements": [
    "Two polygon feature layers"
  ],
  "expectedOutputs": [
    "Intersection polygons with attributes from both inputs"
  ],
  "useCases": [
    "Finding areas where zoning and flood zones overlap",
    "Identifying shared boundaries between jurisdictions",
    "Analyzing habitat overlaps"
  ],
  "nodes": [
    {
      "id": "source_1",
      "type": "postgis_source",
      "name": "Load Layer A",
      "description": "First input layer",
      "parameters": {
        "connectionString": "Host=localhost;Database=gis;Username=gis;Password=gis",
        "tableName": "layer_a",
        "schemaName": "public"
      },
      "position": {
        "x": 100,
        "y": 80
      }
    },
    {
      "id": "source_2",
      "type": "postgis_source",
      "name": "Load Layer B",
      "description": "Second input layer",
      "parameters": {
        "connectionString": "Host=localhost;Database=gis;Username=gis;Password=gis",
        "tableName": "layer_b",
        "schemaName": "public"
      },
      "position": {
        "x": 100,
        "y": 180
      }
    },
    {
      "id": "geo_1",
      "type": "intersection",
      "name": "Calculate Intersection",
      "description": "Find overlapping areas",
      "parameters": {
        "preserveAttributes": true
      },
      "position": {
        "x": 350,
        "y": 130
      }
    },
    {
      "id": "sink_1",
      "type": "postgis_sink",
      "name": "Save Results",
      "description": "Store intersection results",
      "parameters": {
        "connectionString": "Host=localhost;Database=gis;Username=gis;Password=gis",
        "tableName": "intersections",
        "schemaName": "public",
        "srid": 4326,
        "createTable": true
      },
      "position": {
        "x": 550,
        "y": 130
      }
    }
  ],
  "edges": [
    {
      "from": "source_1",
      "to": "geo_1",
      "toPort": "input_a"
    },
    {
      "from": "source_2",
      "to": "geo_1",
      "toPort": "input_b"
    },
    {
      "from": "geo_1",
      "to": "sink_1"
    }
  ],
  "parameters": {
    "layerA": {
      "name": "layerA",
      "type": "string",
      "description": "First input layer table",
      "defaultValue": "layer_a",
      "required": true
    },
    "layerB": {
      "name": "layerB",
      "type": "string",
      "description": "Second input layer table",
      "defaultValue": "layer_b",
      "required": true
    },
    "outputTable": {
      "name": "outputTable",
      "type": "string",
      "description": "Output intersection table",
      "defaultValue": "intersections",
      "required": true
    }
  }
}
