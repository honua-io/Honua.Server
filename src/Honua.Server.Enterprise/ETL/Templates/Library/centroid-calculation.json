{
  "id": "centroid-calculation",
  "name": "Centroid Calculation",
  "description": "Calculate geometric centroids (center points) of polygon features. Convert polygons to representative points.",
  "category": "Geometry Processing",
  "icon": "crosshair",
  "difficulty": 0,
  "estimatedMinutes": 2,
  "tags": ["centroid", "center", "point", "conversion"],
  "author": "HonuaIO",
  "version": "1.0",
  "isFeatured": true,
  "inputRequirements": [
    "Polygon features"
  ],
  "expectedOutputs": [
    "Point features at centroids"
  ],
  "useCases": [
    "Creating point representations of areas",
    "Simplifying polygons for clustering analysis",
    "Label placement for map design"
  ],
  "nodes": [
    {
      "id": "source_1",
      "type": "postgis_source",
      "name": "Load Polygons",
      "description": "Read polygon features",
      "parameters": {
        "connectionString": "Host=localhost;Database=gis;Username=gis;Password=gis",
        "tableName": "polygons",
        "schemaName": "public"
      },
      "position": {
        "x": 100,
        "y": 100
      }
    },
    {
      "id": "geo_1",
      "type": "centroid",
      "name": "Calculate Centroids",
      "description": "Generate center points",
      "parameters": {
        "useInteriorPoint": false
      },
      "position": {
        "x": 300,
        "y": 100
      }
    },
    {
      "id": "sink_1",
      "type": "postgis_sink",
      "name": "Save Centroids",
      "description": "Store centroid points",
      "parameters": {
        "connectionString": "Host=localhost;Database=gis;Username=gis;Password=gis",
        "tableName": "centroids",
        "schemaName": "public",
        "srid": 4326,
        "createTable": true
      },
      "position": {
        "x": 500,
        "y": 100
      }
    }
  ],
  "edges": [
    {
      "from": "source_1",
      "to": "geo_1"
    },
    {
      "from": "geo_1",
      "to": "sink_1"
    }
  ],
  "parameters": {
    "sourceTable": {
      "name": "sourceTable",
      "type": "string",
      "description": "Input polygons table",
      "defaultValue": "polygons",
      "required": true
    },
    "outputTable": {
      "name": "outputTable",
      "type": "string",
      "description": "Output centroids table",
      "defaultValue": "centroids",
      "required": true
    },
    "useInteriorPoint": {
      "name": "useInteriorPoint",
      "type": "boolean",
      "description": "Use interior point instead of geometric centroid",
      "defaultValue": false,
      "required": false
    }
  }
}
