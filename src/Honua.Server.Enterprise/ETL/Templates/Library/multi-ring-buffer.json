{
  "id": "multi-ring-buffer",
  "name": "Multi-Ring Buffer",
  "description": "Create multiple concentric buffer rings at different distances. Perfect for graduated impact zones and distance analysis.",
  "category": "Buffer Operations",
  "icon": "target",
  "difficulty": 1,
  "estimatedMinutes": 3,
  "tags": ["buffer", "multi-ring", "concentric", "zones"],
  "author": "HonuaIO",
  "version": "1.0",
  "isFeatured": true,
  "inputRequirements": [
    "Point, line, or polygon features"
  ],
  "expectedOutputs": [
    "Multiple buffer ring polygons at specified distances"
  ],
  "useCases": [
    "Creating graduated evacuation zones",
    "Analyzing impact at multiple distances",
    "Service area tiers (immediate, near, far)"
  ],
  "nodes": [
    {
      "id": "source_1",
      "type": "postgis_source",
      "name": "Load Features",
      "description": "Read input features",
      "parameters": {
        "connectionString": "Host=localhost;Database=gis;Username=gis;Password=gis",
        "tableName": "sites",
        "schemaName": "public"
      },
      "position": {
        "x": 100,
        "y": 100
      }
    },
    {
      "id": "geo_1",
      "type": "multi_ring_buffer",
      "name": "Multi-Ring Buffer",
      "description": "Create concentric rings",
      "parameters": {
        "distances": [500, 1000, 2000, 5000],
        "units": "meters",
        "quadrantSegments": 8
      },
      "position": {
        "x": 300,
        "y": 100
      }
    },
    {
      "id": "sink_1",
      "type": "postgis_sink",
      "name": "Save Rings",
      "description": "Store buffer rings",
      "parameters": {
        "connectionString": "Host=localhost;Database=gis;Username=gis;Password=gis",
        "tableName": "buffer_rings",
        "schemaName": "public",
        "srid": 4326,
        "createTable": true
      },
      "position": {
        "x": 500,
        "y": 100
      }
    }
  ],
  "edges": [
    {
      "from": "source_1",
      "to": "geo_1"
    },
    {
      "from": "geo_1",
      "to": "sink_1"
    }
  ],
  "parameters": {
    "sourceTable": {
      "name": "sourceTable",
      "type": "string",
      "description": "Input feature table",
      "defaultValue": "sites",
      "required": true
    },
    "distances": {
      "name": "distances",
      "type": "string",
      "description": "Comma-separated distances (e.g., 500,1000,2000)",
      "defaultValue": "500,1000,2000",
      "required": true
    },
    "outputTable": {
      "name": "outputTable",
      "type": "string",
      "description": "Output rings table",
      "defaultValue": "buffer_rings",
      "required": true
    }
  }
}
