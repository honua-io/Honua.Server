{
  "id": "area-calculation-export",
  "name": "Area Calculation and Export",
  "description": "Calculate polygon areas, add area attributes, and export with statistics. Essential for land measurement workflows.",
  "category": "Geometry Processing",
  "icon": "square",
  "difficulty": 0,
  "estimatedMinutes": 2,
  "tags": ["area", "measurement", "statistics", "calculation"],
  "author": "HonuaIO",
  "version": "1.0",
  "inputRequirements": [
    "Polygon features"
  ],
  "expectedOutputs": [
    "Features with area attributes",
    "Area statistics report"
  ],
  "useCases": [
    "Land parcel area calculations",
    "Habitat extent measurements",
    "Planning area summaries"
  ],
  "nodes": [
    {
      "id": "source_1",
      "type": "postgis_source",
      "name": "Load Polygons",
      "description": "Read polygon features",
      "parameters": {
        "connectionString": "Host=localhost;Database=gis;Username=gis;Password=gis",
        "tableName": "polygons",
        "schemaName": "public"
      },
      "position": {
        "x": 100,
        "y": 100
      }
    },
    {
      "id": "geo_1",
      "type": "calculate_area",
      "name": "Calculate Areas",
      "description": "Add area attributes",
      "parameters": {
        "areaField": "area_sqm",
        "units": "square_meters"
      },
      "position": {
        "x": 300,
        "y": 100
      }
    },
    {
      "id": "sink_1",
      "type": "geojson_sink",
      "name": "Export with Areas",
      "description": "Save results",
      "parameters": {
        "filePath": "/data/output/areas.geojson",
        "prettyPrint": true
      },
      "position": {
        "x": 500,
        "y": 100
      }
    }
  ],
  "edges": [
    {
      "from": "source_1",
      "to": "geo_1"
    },
    {
      "from": "geo_1",
      "to": "sink_1"
    }
  ],
  "parameters": {
    "sourceTable": {
      "name": "sourceTable",
      "type": "string",
      "description": "Input polygons table",
      "defaultValue": "polygons",
      "required": true
    },
    "areaUnits": {
      "name": "areaUnits",
      "type": "string",
      "description": "Area units (square_meters, hectares, acres)",
      "defaultValue": "square_meters",
      "required": true,
      "allowedValues": ["square_meters", "hectares", "acres", "square_kilometers"]
    },
    "outputPath": {
      "name": "outputPath",
      "type": "string",
      "description": "Output file path",
      "defaultValue": "/data/output/areas.geojson",
      "required": true
    }
  }
}
