{
  "id": "union-and-dissolve",
  "name": "Union and Dissolve",
  "description": "Combine multiple polygon layers into a single layer and dissolve boundaries. Creates comprehensive coverage areas.",
  "category": "Overlay Operations",
  "icon": "merge",
  "difficulty": 1,
  "estimatedMinutes": 5,
  "tags": ["union", "dissolve", "merge", "combine"],
  "author": "HonuaIO",
  "version": "1.0",
  "isFeatured": true,
  "inputRequirements": [
    "Two or more polygon layers"
  ],
  "expectedOutputs": [
    "Single merged layer with dissolved boundaries"
  ],
  "useCases": [
    "Merging adjacent administrative units",
    "Combining multiple service areas",
    "Creating unified land use maps"
  ],
  "nodes": [
    {
      "id": "source_1",
      "type": "postgis_source",
      "name": "Load Layer A",
      "description": "First input layer",
      "parameters": {
        "connectionString": "Host=localhost;Database=gis;Username=gis;Password=gis",
        "tableName": "regions_a",
        "schemaName": "public"
      },
      "position": {
        "x": 100,
        "y": 80
      }
    },
    {
      "id": "source_2",
      "type": "postgis_source",
      "name": "Load Layer B",
      "description": "Second input layer",
      "parameters": {
        "connectionString": "Host=localhost;Database=gis;Username=gis;Password=gis",
        "tableName": "regions_b",
        "schemaName": "public"
      },
      "position": {
        "x": 100,
        "y": 180
      }
    },
    {
      "id": "geo_1",
      "type": "union",
      "name": "Union Features",
      "description": "Combine all features",
      "parameters": {
        "preserveAttributes": false
      },
      "position": {
        "x": 300,
        "y": 130
      }
    },
    {
      "id": "geo_2",
      "type": "dissolve",
      "name": "Dissolve Boundaries",
      "description": "Remove internal boundaries",
      "parameters": {
        "dissolveField": null
      },
      "position": {
        "x": 500,
        "y": 130
      }
    },
    {
      "id": "sink_1",
      "type": "postgis_sink",
      "name": "Save Result",
      "description": "Store merged layer",
      "parameters": {
        "connectionString": "Host=localhost;Database=gis;Username=gis;Password=gis",
        "tableName": "merged_regions",
        "schemaName": "public",
        "srid": 4326,
        "createTable": true
      },
      "position": {
        "x": 700,
        "y": 130
      }
    }
  ],
  "edges": [
    {
      "from": "source_1",
      "to": "geo_1"
    },
    {
      "from": "source_2",
      "to": "geo_1"
    },
    {
      "from": "geo_1",
      "to": "geo_2"
    },
    {
      "from": "geo_2",
      "to": "sink_1"
    }
  ],
  "parameters": {
    "layerA": {
      "name": "layerA",
      "type": "string",
      "description": "First input layer",
      "defaultValue": "regions_a",
      "required": true
    },
    "layerB": {
      "name": "layerB",
      "type": "string",
      "description": "Second input layer",
      "defaultValue": "regions_b",
      "required": true
    },
    "outputTable": {
      "name": "outputTable",
      "type": "string",
      "description": "Output merged table",
      "defaultValue": "merged_regions",
      "required": true
    }
  }
}
