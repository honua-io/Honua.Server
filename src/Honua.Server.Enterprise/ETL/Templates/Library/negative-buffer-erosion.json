{
  "id": "negative-buffer-erosion",
  "name": "Negative Buffer (Erosion)",
  "description": "Apply negative buffer to shrink polygon boundaries inward. Useful for creating setbacks and interior zones.",
  "category": "Buffer Operations",
  "icon": "compress",
  "difficulty": 1,
  "estimatedMinutes": 2,
  "tags": ["buffer", "negative", "erosion", "setback"],
  "author": "HonuaIO",
  "version": "1.0",
  "inputRequirements": [
    "Polygon features"
  ],
  "expectedOutputs": [
    "Eroded polygon features"
  ],
  "useCases": [
    "Creating building setbacks from property lines",
    "Defining inner safety zones",
    "Generating core areas excluding edges"
  ],
  "nodes": [
    {
      "id": "source_1",
      "type": "postgis_source",
      "name": "Load Polygons",
      "description": "Read input polygons",
      "parameters": {
        "connectionString": "Host=localhost;Database=gis;Username=gis;Password=gis",
        "tableName": "parcels",
        "schemaName": "public"
      },
      "position": {
        "x": 100,
        "y": 100
      }
    },
    {
      "id": "geo_1",
      "type": "buffer",
      "name": "Negative Buffer",
      "description": "Erode boundaries inward",
      "parameters": {
        "distance": -10.0,
        "units": "meters",
        "quadrantSegments": 8
      },
      "position": {
        "x": 300,
        "y": 100
      }
    },
    {
      "id": "sink_1",
      "type": "postgis_sink",
      "name": "Save Setbacks",
      "description": "Store eroded polygons",
      "parameters": {
        "connectionString": "Host=localhost;Database=gis;Username=gis;Password=gis",
        "tableName": "setbacks",
        "schemaName": "public",
        "srid": 4326,
        "createTable": true
      },
      "position": {
        "x": 500,
        "y": 100
      }
    }
  ],
  "edges": [
    {
      "from": "source_1",
      "to": "geo_1"
    },
    {
      "from": "geo_1",
      "to": "sink_1"
    }
  ],
  "parameters": {
    "sourceTable": {
      "name": "sourceTable",
      "type": "string",
      "description": "Input polygon table",
      "defaultValue": "parcels",
      "required": true
    },
    "setbackDistance": {
      "name": "setbackDistance",
      "type": "number",
      "description": "Setback distance in meters (positive value)",
      "defaultValue": 10.0,
      "required": true,
      "min": 0
    },
    "outputTable": {
      "name": "outputTable",
      "type": "string",
      "description": "Output setback table",
      "defaultValue": "setbacks",
      "required": true
    }
  }
}
