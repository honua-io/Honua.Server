<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <!-- MudBlazor for Material Design components -->
    <PackageReference Include="MudBlazor" Version="8.0.0" />

    <!-- HTTP client for API calls -->
    <PackageReference Include="Microsoft.Extensions.Http" Version="9.0.1" />

    <!-- SignalR client for real-time updates -->
    <PackageReference Include="Microsoft.AspNetCore.SignalR.Client" Version="9.0.0" />

    <!-- FluentValidation for form validation -->
    <PackageReference Include="FluentValidation" Version="11.11.0" />
    <PackageReference Include="FluentValidation.DependencyInjectionExtensions" Version="11.11.0" />

    <!-- JSON handling -->
    <PackageReference Include="System.Text.Json" Version="9.0.9" />

    <!-- Authorization -->
    <PackageReference Include="Microsoft.AspNetCore.Components.Authorization" Version="9.0.0" />
  </ItemGroup>

  <ItemGroup>
    <!-- Reference to Honua.Server.Core for metadata models -->
    <ProjectReference Include="../Honua.Server.Core/Honua.Server.Core.csproj" />

    <!-- Reference to Honua.MapSDK for visual map builder -->
    <ProjectReference Include="../Honua.MapSDK/Honua.MapSDK.csproj" />
  </ItemGroup>

</Project>
