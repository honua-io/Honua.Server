<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:HonuaField.Models.FormBuilder"
             x:Class="HonuaField.Controls.FormFields.DateTimeFormFieldControl"
             x:DataType="models:DateTimeFormField">

    <VerticalStackLayout Spacing="4">
        <!-- Label -->
        <Label>
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="{Binding Label}" FontAttributes="Bold" />
                    <Span Text=" *" TextColor="Red" IsVisible="{Binding IsRequired}" />
                </FormattedString>
            </Label.FormattedText>
        </Label>

        <!-- Date and Time Pickers -->
        <HorizontalStackLayout Spacing="8">
            <DatePicker Date="{Binding Value, Mode=TwoWay, Converter={StaticResource DateTimeToDateConverter}}"
                        MinimumDate="{Binding MinimumDateTime, TargetNullValue='1900-01-01', Converter={StaticResource DateTimeToDateConverter}}"
                        MaximumDate="{Binding MaximumDateTime, TargetNullValue='2100-12-31', Converter={StaticResource DateTimeToDateConverter}}"
                        IsEnabled="{Binding IsReadOnly, Converter={StaticResource InvertedBoolConverter}}"
                        HorizontalOptions="FillAndExpand">
                <DatePicker.Behaviors>
                    <DataTrigger TargetType="DatePicker"
                               Binding="{Binding HasError}"
                               Value="True">
                        <Setter Property="TextColor" Value="Red" />
                    </DataTrigger>
                </DatePicker.Behaviors>
            </DatePicker>

            <TimePicker Time="{Binding Value, Mode=TwoWay, Converter={StaticResource DateTimeToTimeConverter}}"
                        IsEnabled="{Binding IsReadOnly, Converter={StaticResource InvertedBoolConverter}}"
                        HorizontalOptions="End">
                <TimePicker.Behaviors>
                    <DataTrigger TargetType="TimePicker"
                               Binding="{Binding HasError}"
                               Value="True">
                        <Setter Property="TextColor" Value="Red" />
                    </DataTrigger>
                </TimePicker.Behaviors>
            </TimePicker>
        </HorizontalStackLayout>

        <!-- Help Text -->
        <Label Text="{Binding HelpText}"
               FontSize="12"
               TextColor="Gray"
               IsVisible="{Binding HelpText, Converter={StaticResource IsNotNullConverter}}" />

        <!-- Error Message -->
        <Label Text="{Binding ErrorMessage}"
               FontSize="12"
               TextColor="Red"
               IsVisible="{Binding HasError}" />
    </VerticalStackLayout>

</ContentView>
