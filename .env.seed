# Environment variables for seeded Honua Docker Compose deployment
# Copy this file to .env.seed and customize as needed

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL credentials
POSTGRES_USER=honua
POSTGRES_PASSWORD=honua_seed_pass
POSTGRES_DB=honua
POSTGRES_PORT=5432

# PostgreSQL performance tuning
POSTGRES_SHARED_BUFFERS=128MB
POSTGRES_EFFECTIVE_CACHE_SIZE=512MB
POSTGRES_MAX_CONNECTIONS=50

# =============================================================================
# Honua Server Configuration
# =============================================================================

# Server port
HONUA_PORT=8080

# ASP.NET Core environment (Development, Staging, Production)
ASPNETCORE_ENVIRONMENT=Development

# =============================================================================
# Logging Configuration
# =============================================================================

# Log levels: Trace, Debug, Information, Warning, Error, Critical, None
LOG_LEVEL=Information
LOG_LEVEL_ASPNETCORE=Warning
LOG_LEVEL_HONUA=Information

# =============================================================================
# Authentication Configuration
# =============================================================================

# Authentication mode: Local, OIDC, or None
AUTH_MODE=Local

# QuickStart mode - enables anonymous access for testing
# WARNING: Set to false in production environments!
QUICKSTART_ENABLED=true

# Enforce authentication (requires valid credentials)
AUTH_ENFORCE=false

# Optional API key for authenticated requests
# Leave empty for no API key requirement
HONUA_API_KEY=

# =============================================================================
# Rate Limiting Configuration
# =============================================================================

# Number of requests allowed per time window
RATE_LIMIT=1000

# =============================================================================
# Observability Configuration
# =============================================================================

# Enable Prometheus metrics
METRICS_ENABLED=true

# Enable OpenTelemetry distributed tracing
TRACING_ENABLED=false

# =============================================================================
# Optional Configuration
# =============================================================================

# Configuration directory (mount custom config files)
CONFIG_DIR=./config
