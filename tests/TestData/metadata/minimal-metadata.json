{
  "$schema": "https://honua.io/schemas/metadata/v1/metadata-schema.json",
  "version": "1.0",
  "title": "Minimal Test Configuration",
  "description": "Bare minimum configuration for basic API smoke tests",
  "dataSources": [
    {
      "id": "test-sqlite",
      "name": "Test SQLite Database",
      "type": "SQLite",
      "connection": {
        "connectionString": "Data Source=/data/ogc-sample.db"
      }
    }
  ],
  "services": [
    {
      "id": "roads",
      "name": "roads",
      "title": "Test Roads Service",
      "description": "Minimal service for smoke testing",
      "dataSourceId": "test-sqlite",
      "enabled": true,
      "serviceTypes": [
        {
          "type": "OgcFeatures",
          "enabled": true
        }
      ]
    }
  ],
  "layers": [
    {
      "id": "roads-primary",
      "serviceId": "roads",
      "name": "roads-primary",
      "title": "Primary Roads",
      "description": "Test layer with simple geometry",
      "geometryType": "LineString",
      "dataSource": {
        "tableName": "roads",
        "geometryColumn": "geom",
        "primaryKeyColumn": "id"
      },
      "extent": {
        "bbox": [-122.5, 45.5, -122.4, 45.6],
        "crs": "EPSG:4326"
      }
    }
  ]
}
