:80 {
    reverse_proxy honua:5000 {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
    }

    # Health check endpoint
    handle /health {
        reverse_proxy honua:5000
    }

    # Enable compression
    encode gzip

    # Logging
    log {
        output stdout
        format console
    }
}
