<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsPackable>false</IsPackable>
    <IsTestProject>false</IsTestProject>
  </PropertyGroup>

  <ItemGroup>
    <!-- Core test packages -->
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.12.0" />
    <PackageReference Include="xunit" Version="2.9.2" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.8.2" />
    <PackageReference Include="coverlet.collector" Version="6.0.2" />

    <!-- Assertion and mocking libraries -->
    <PackageReference Include="FluentAssertions" Version="8.6.0" />
    <PackageReference Include="Moq" Version="4.20.72" />
    <PackageReference Include="NSubstitute" Version="5.3.0" />

    <!-- Test infrastructure -->
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Testing" Version="9.0.9" />

    <!-- Testcontainers - all variants for shared fixtures -->
    <PackageReference Include="Testcontainers.PostgreSql" Version="3.10.0" />
    <PackageReference Include="Testcontainers.MySql" Version="3.10.0" />
    <PackageReference Include="Testcontainers.MsSql" Version="3.10.0" />
    <PackageReference Include="Testcontainers.Minio" Version="3.10.0" />
    <PackageReference Include="Testcontainers.Azurite" Version="3.10.0" />
    <PackageReference Include="Testcontainers.Redis" Version="3.10.0" />

    <!-- Property testing -->
    <PackageReference Include="FsCheck.Xunit" Version="2.16.6" />

    <!-- Architecture tests -->
    <PackageReference Include="NetArchTest.Rules" Version="1.3.2" />

    <!-- Security: Override vulnerable transitive dependencies -->
    <PackageReference Include="System.Net.Http" Version="4.3.4" />
    <PackageReference Include="System.Security.Cryptography.X509Certificates" Version="4.3.2" />
  </ItemGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <Using Include="Xunit" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Honua.Server.Core\Honua.Server.Core.csproj" />
    <ProjectReference Include="..\..\src\Honua.Server.Core.Raster\Honua.Server.Core.Raster.csproj" />
    <ProjectReference Include="..\..\src\Honua.Server.Host\Honua.Server.Host.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Data\metadata-ogc-sample.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Data\Rasters\cea.tif">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
