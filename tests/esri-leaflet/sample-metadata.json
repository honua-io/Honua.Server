{
  "dataSources": [
    {
      "id": "test-datasource",
      "provider": "postgres",
      "connectionString": "Host=localhost;Port=5432;Database=honua_test;Username=honua;Password=honua"
    }
  ],
  "services": [
    {
      "id": "parks",
      "title": "Parks and Recreation",
      "serviceType": "feature",
      "dataSourceId": "test-datasource",
      "enabled": true,
      "description": "Parks and recreational facilities test data",
      "geoservices": {
        "enabled": true,
        "capabilities": "Query,Create,Update,Delete,Sync"
      },
      "ogc": {
        "defaultCrs": "EPSG:4326",
        "itemLimit": 1000
      },
      "layers": [
        {
          "id": "parks-layer",
          "title": "Parks",
          "geometryType": "Point",
          "idField": "OBJECTID",
          "displayField": "name",
          "geometryField": "geom",
          "storage": {
            "table": "parks",
            "geometryColumn": "geom",
            "primaryKey": "OBJECTID",
            "srid": 4326
          },
          "fields": [
            {
              "name": "OBJECTID",
              "dataType": "int64",
              "nullable": false,
              "editable": false
            },
            {
              "name": "name",
              "dataType": "string",
              "nullable": true,
              "editable": true,
              "length": 255
            },
            {
              "name": "type",
              "dataType": "string",
              "nullable": true,
              "editable": true,
              "length": 100
            },
            {
              "name": "status",
              "dataType": "string",
              "nullable": true,
              "editable": true,
              "length": 50
            },
            {
              "name": "created_at",
              "dataType": "datetime",
              "nullable": true,
              "editable": false
            },
            {
              "name": "geom",
              "dataType": "geometry",
              "nullable": false
            }
          ]
        }
      ]
    },
    {
      "id": "basemap",
      "title": "Basemap Service",
      "serviceType": "map",
      "dataSourceId": "test-datasource",
      "enabled": true,
      "description": "Basemap tile and map service",
      "geoservices": {
        "enabled": true,
        "capabilities": "Map,Query,Data,Tilemap",
        "supportsTiles": true
      },
      "layers": [
        {
          "id": "basemap-layer",
          "title": "Base Layer",
          "geometryType": "Polygon",
          "storage": {
            "table": "basemap_features",
            "geometryColumn": "geom"
          }
        }
      ]
    },
    {
      "id": "imagery",
      "title": "Imagery Service",
      "serviceType": "image",
      "dataSourceId": "test-datasource",
      "enabled": true,
      "description": "Raster imagery service",
      "geoservices": {
        "enabled": true,
        "capabilities": "Image,Catalog,Metadata"
      }
    }
  ],
  "geometryService": {
    "enabled": true,
    "operations": [
      "buffer",
      "project",
      "simplify",
      "relation",
      "union",
      "intersect",
      "difference"
    ]
  }
}
