name: Container Security Scanning

on:
  schedule:
    # Run daily at 2 AM UTC
    - cron: '0 2 * * *'
  push:
    branches: [ master, main, dev ]
    paths:
      - 'Dockerfile'
      - 'src/**'
      - '.github/workflows/container-security.yml'
  pull_request:
    branches: [ master, main ]
    paths:
      - 'Dockerfile'
      - 'src/**'
  workflow_dispatch:

env:
  DOTNET_VERSION: '9.0.x'

jobs:
  trivy-scan:
    name: Trivy Security Scan
    runs-on: ubuntu-latest
    permissions:
      actions: read
      contents: read
      security-events: write
      packages: write

    strategy:
      matrix:
        scan-type: ['os', 'library']

    steps:
    - name: Checkout code
      uses: actions/checkout@v4

    - name: Set up Docker Buildx
      uses: docker/setup-buildx-action@v3

    - name: Build production Docker image
      uses: docker/build-push-action@v5
      with:
        context: .
        file: ./Dockerfile
        push: false
        load: true
        tags: honua:latest
        cache-from: type=gha
        cache-to: type=gha,mode=max

    - name: Run Trivy vulnerability scanner - ${{ matrix.scan-type }}
      uses: aquasecurity/trivy-action@master
      with:
        image-ref: 'honua:latest'
        format: 'sarif'
        output: 'trivy-${{ matrix.scan-type }}-results.sarif'
        severity: 'CRITICAL,HIGH'
        vuln-type: ${{ matrix.scan-type }}
        exit-code: '0'  # Don't fail on scheduled scans

    - name: Run Trivy vulnerability scanner - ${{ matrix.scan-type }} (table)
      uses: aquasecurity/trivy-action@master
      with:
        image-ref: 'honua:latest'
        format: 'table'
        output: 'trivy-${{ matrix.scan-type }}-results.txt'
        severity: 'CRITICAL,HIGH,MEDIUM,LOW'
        vuln-type: ${{ matrix.scan-type }}

    - name: Run Trivy vulnerability scanner - ${{ matrix.scan-type }} (JSON)
      uses: aquasecurity/trivy-action@master
      if: always()
      with:
        image-ref: 'honua:latest'
        format: 'json'
        output: 'trivy-${{ matrix.scan-type }}-results.json'
        severity: 'CRITICAL,HIGH,MEDIUM,LOW'
        vuln-type: ${{ matrix.scan-type }}

    - name: Upload Trivy results to GitHub Security tab
      uses: github/codeql-action/upload-sarif@v3
      if: always()
      with:
        sarif_file: 'trivy-${{ matrix.scan-type }}-results.sarif'
        category: 'trivy-${{ matrix.scan-type }}'

    - name: Upload scan artifacts
      uses: actions/upload-artifact@v4
      if: always()
      with:
        name: trivy-${{ matrix.scan-type }}-scan-results
        path: |
          trivy-${{ matrix.scan-type }}-results.sarif
          trivy-${{ matrix.scan-type }}-results.txt
          trivy-${{ matrix.scan-type }}-results.json
        retention-days: 90

  trivy-config-scan:
    name: Trivy Configuration Scan
    runs-on: ubuntu-latest
    permissions:
      actions: read
      contents: read
      security-events: write

    steps:
    - name: Checkout code
      uses: actions/checkout@v4

    - name: Run Trivy configuration scanner
      uses: aquasecurity/trivy-action@master
      with:
        scan-type: 'config'
        scan-ref: '.'
        format: 'sarif'
        output: 'trivy-config-results.sarif'
        exit-code: '0'

    - name: Run Trivy configuration scanner (table)
      uses: aquasecurity/trivy-action@master
      with:
        scan-type: 'config'
        scan-ref: '.'
        format: 'table'
        output: 'trivy-config-results.txt'

    - name: Upload Trivy config results to GitHub Security tab
      uses: github/codeql-action/upload-sarif@v3
      if: always()
      with:
        sarif_file: 'trivy-config-results.sarif'
        category: 'trivy-config'

    - name: Upload config scan artifacts
      uses: actions/upload-artifact@v4
      if: always()
      with:
        name: trivy-config-scan-results
        path: |
          trivy-config-results.sarif
          trivy-config-results.txt
        retention-days: 90

  grype-scan:
    name: Grype Security Scan
    runs-on: ubuntu-latest
    permissions:
      actions: read
      contents: read
      security-events: write

    steps:
    - name: Checkout code
      uses: actions/checkout@v4

    - name: Set up Docker Buildx
      uses: docker/setup-buildx-action@v3

    - name: Build production Docker image
      uses: docker/build-push-action@v5
      with:
        context: .
        file: ./Dockerfile
        push: false
        load: true
        tags: honua:latest

    - name: Run Grype vulnerability scanner
      uses: anchore/scan-action@v3
      id: grype
      with:
        image: 'honua:latest'
        fail-build: false
        severity-cutoff: high
        output-format: sarif

    - name: Upload Grype results to GitHub Security tab
      uses: github/codeql-action/upload-sarif@v3
      if: always()
      with:
        sarif_file: ${{ steps.grype.outputs.sarif }}
        category: 'grype'

    - name: Upload Grype scan artifacts
      uses: actions/upload-artifact@v4
      if: always()
      with:
        name: grype-scan-results
        path: ${{ steps.grype.outputs.sarif }}
        retention-days: 90

  docker-scout:
    name: Docker Scout Security Scan
    runs-on: ubuntu-latest
    permissions:
      actions: read
      contents: read
      security-events: write

    steps:
    - name: Checkout code
      uses: actions/checkout@v4

    - name: Set up Docker Buildx
      uses: docker/setup-buildx-action@v3

    - name: Build production Docker image
      uses: docker/build-push-action@v5
      with:
        context: .
        file: ./Dockerfile
        push: false
        load: true
        tags: honua:latest

    - name: Docker Scout CVE scan
      uses: docker/scout-action@v1
      if: github.event_name != 'pull_request'
      with:
        command: cves
        image: honua:latest
        only-severities: critical,high
        exit-code: false
        sarif-file: docker-scout-results.sarif

    - name: Upload Docker Scout results to GitHub Security tab
      uses: github/codeql-action/upload-sarif@v3
      if: github.event_name != 'pull_request' && always()
      with:
        sarif_file: docker-scout-results.sarif
        category: 'docker-scout'

    - name: Upload Docker Scout artifacts
      uses: actions/upload-artifact@v4
      if: github.event_name != 'pull_request' && always()
      with:
        name: docker-scout-scan-results
        path: docker-scout-results.sarif
        retention-days: 90

  security-summary:
    name: Security Scan Summary
    runs-on: ubuntu-latest
    needs: [trivy-scan, trivy-config-scan, grype-scan, docker-scout]
    if: always()

    steps:
    - name: Download all scan results
      uses: actions/download-artifact@v4
      with:
        pattern: "*-scan-results"
        merge-multiple: true

    - name: Generate security summary
      run: |
        echo "## Container Security Scan Summary" >> $GITHUB_STEP_SUMMARY
        echo "" >> $GITHUB_STEP_SUMMARY
        echo "**Date**: $(date -u +"%Y-%m-%d %H:%M:%S UTC")" >> $GITHUB_STEP_SUMMARY
        echo "**Branch**: ${{ github.ref_name }}" >> $GITHUB_STEP_SUMMARY
        echo "**Commit**: ${{ github.sha }}" >> $GITHUB_STEP_SUMMARY
        echo "" >> $GITHUB_STEP_SUMMARY

        echo "### Scan Tools" >> $GITHUB_STEP_SUMMARY
        echo "" >> $GITHUB_STEP_SUMMARY
        echo "- âœ“ Trivy (OS + Library vulnerabilities)" >> $GITHUB_STEP_SUMMARY
        echo "- âœ“ Trivy Config Scan (Dockerfile + K8s manifests)" >> $GITHUB_STEP_SUMMARY
        echo "- âœ“ Grype (Alternative vulnerability database)" >> $GITHUB_STEP_SUMMARY
        echo "- âœ“ Docker Scout (Docker Hub integration)" >> $GITHUB_STEP_SUMMARY
        echo "" >> $GITHUB_STEP_SUMMARY

        echo "### Results" >> $GITHUB_STEP_SUMMARY
        echo "" >> $GITHUB_STEP_SUMMARY

        if [ -f trivy-os-results.txt ]; then
          echo "#### Trivy OS Vulnerabilities" >> $GITHUB_STEP_SUMMARY
          echo '```' >> $GITHUB_STEP_SUMMARY
          head -n 50 trivy-os-results.txt >> $GITHUB_STEP_SUMMARY
          echo '```' >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
        fi

        if [ -f trivy-library-results.txt ]; then
          echo "#### Trivy Library Vulnerabilities" >> $GITHUB_STEP_SUMMARY
          echo '```' >> $GITHUB_STEP_SUMMARY
          head -n 50 trivy-library-results.txt >> $GITHUB_STEP_SUMMARY
          echo '```' >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
        fi

        if [ -f trivy-config-results.txt ]; then
          echo "#### Trivy Configuration Issues" >> $GITHUB_STEP_SUMMARY
          echo '```' >> $GITHUB_STEP_SUMMARY
          head -n 50 trivy-config-results.txt >> $GITHUB_STEP_SUMMARY
          echo '```' >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
        fi

        echo "### Download Artifacts" >> $GITHUB_STEP_SUMMARY
        echo "" >> $GITHUB_STEP_SUMMARY
        echo "All scan results are available in the workflow artifacts for detailed analysis." >> $GITHUB_STEP_SUMMARY

    - name: Comment PR with security results
      if: github.event_name == 'pull_request'
      uses: actions/github-script@v7
      with:
        script: |
          const fs = require('fs');
          let comment = '## ðŸ”’ Container Security Scan Results\n\n';

          try {
            const triviaOsResults = fs.readFileSync('trivy-os-results.txt', 'utf8');
            comment += '### Trivy OS Vulnerabilities\n```\n' + triviaOsResults.substring(0, 1000) + '\n```\n\n';
          } catch (e) {}

          try {
            const triviaLibResults = fs.readFileSync('trivy-library-results.txt', 'utf8');
            comment += '### Trivy Library Vulnerabilities\n```\n' + triviaLibResults.substring(0, 1000) + '\n```\n\n';
          } catch (e) {}

          comment += '\n---\n*View full results in the workflow artifacts*';

          github.rest.issues.createComment({
            issue_number: context.issue.number,
            owner: context.repo.owner,
            repo: context.repo.repo,
            body: comment
          });
