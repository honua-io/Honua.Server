# Simple Dockerfile for OData container tests
# No BuildKit features for compatibility with Testcontainers

FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /source

# Copy NuGet config and build props
COPY NuGet.Config Directory.Build.props ./

# Copy project files
COPY src/ ./src/

# Build and publish - handle duplicate content files
RUN dotnet build src/Honua.Server.Host/Honua.Server.Host.csproj \
    --configuration Release && \
    dotnet publish src/Honua.Server.Host/Honua.Server.Host.csproj \
    --configuration Release \
    --no-build \
    --output /app/publish \
    /p:UseAppHost=false || \
    (dotnet publish src/Honua.Server.Host/Honua.Server.Host.csproj \
    --configuration Release \
    --output /app/publish \
    /p:UseAppHost=false \
    /p:ErrorOnDuplicatePublishOutputFiles=false)

FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS runtime
WORKDIR /app

ENV ASPNETCORE_URLS=http://+:8080

COPY --from=build /app/publish ./

EXPOSE 8080

HEALTHCHECK --interval=30s --timeout=3s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:8080/healthz/live || exit 1

ENTRYPOINT ["dotnet", "Honua.Server.Host.dll"]
