# Honua Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to source control

# Core Application
HONUA_ENCRYPT_KEY=your-secure-encryption-key-here

# Database Configuration (choose one)
CONNECTION_STRING=Server=localhost;Database=honua;Uid=sa;Pwd=your-password;MultipleActiveResultSets=True;Encrypt=False;TrustServerCertificate=True;

# SQL Server (for docker-compose-sqlserver.yml)
SQL_SERVER_PASSWORD=YourStrongPassword123!

# PostgreSQL (for docker-compose-postgis.yml)
POSTGRES_PASSWORD=your-postgres-password

# MySQL (for docker-compose-mysql.yml)
MYSQL_ROOT_PASSWORD=your-mysql-password

# Azure Storage (for docker-compose.yml)
AZURE_STORAGE_ACCOUNT=your-azure-storage-account
AZURE_STORAGE_KEY=your-azure-storage-key
AZURE_CONTAINER_NAME=your-container-name

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-must-be-long-enough-for-security

# AWS Configuration (optional)
AWS_REGION=us-east-1
AWS_COGNITO_CLIENT_ID=your-aws-cognito-client-id
AWS_COGNITO_CLIENT_SECRET=your-aws-cognito-client-secret
AWS_COGNITO_POOL_ID=your-aws-cognito-pool-id

# S3 Configuration (optional)
S3_BUCKET_NAME=your-s3-bucket-name
S3_ACCESS_KEY_ID=your-aws-access-key-id
S3_SECRET_ACCESS_KEY=your-aws-secret-access-key