@page "/"
<PageTitle>Honua MapSDK - Demo Application</PageTitle>

<div class="landing-page">
    <!-- Hero Section -->
    <section class="landing-hero">
        <div class="hero-content">
            <h1 class="fade-in">Honua MapSDK</h1>
            <p class="subtitle fade-in">
                Build powerful interactive mapping applications with Blazor.
                Zero-config auto-sync between maps, grids, charts, and filters.
            </p>
            <div class="cta-buttons fade-in">
                <MudButton Variant="Variant.Filled"
                           Color="Color.Primary"
                           Size="Size.Large"
                           StartIcon="@Icons.Material.Filled.Explore"
                           Href="/property-dashboard">
                    Explore Demos
                </MudButton>
                <MudButton Variant="Variant.Outlined"
                           Color="Color.Primary"
                           Size="Size.Large"
                           StartIcon="@Icons.Material.Filled.GitHub"
                           Href="https://github.com/honua-io/Honua.Server"
                           Target="_blank"
                           Style="color: white; border-color: white;">
                    View on GitHub
                </MudButton>
            </div>

            <div class="hero-stats">
                <div class="hero-stat">
                    <span class="hero-stat-value">7+</span>
                    <span class="hero-stat-label">Components</span>
                </div>
                <div class="hero-stat">
                    <span class="hero-stat-value">6</span>
                    <span class="hero-stat-label">Demo Scenarios</span>
                </div>
                <div class="hero-stat">
                    <span class="hero-stat-value">100%</span>
                    <span class="hero-stat-label">Blazor Native</span>
                </div>
            </div>
        </div>
    </section>

    <!-- Demo Cards Section -->
    <section class="demo-cards-section">
        <h2 class="section-title">Interactive Demos</h2>
        <p class="text-center mb-4" style="font-size: 1.1rem; color: var(--text-secondary); max-width: 800px; margin: 0 auto 50px;">
            Explore real-world scenarios demonstrating the power and flexibility of Honua MapSDK components.
        </p>

        <div class="demo-cards-grid">
            <!-- Property Dashboard -->
            <div class="demo-card" @onclick="@(() => NavigateTo("/property-dashboard"))">
                <div class="demo-card-image" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <MudIcon Icon="@Icons.Material.Filled.HomeWork" Class="demo-card-icon" />
                </div>
                <div class="demo-card-content">
                    <h3 class="demo-card-title">Property Analysis</h3>
                    <p class="demo-card-description">
                        Real estate dashboard with property parcels, value analysis, and advanced filtering.
                        Search by address, filter by price and land use.
                    </p>
                    <div class="demo-card-tags">
                        <span class="demo-card-tag">Map</span>
                        <span class="demo-card-tag">DataGrid</span>
                        <span class="demo-card-tag">Charts</span>
                        <span class="demo-card-tag">Filters</span>
                    </div>
                    <div class="demo-card-footer">
                        <span class="demo-card-complexity">
                            <MudIcon Icon="@Icons.Material.Filled.Speed" Size="Size.Small" /> Intermediate
                        </span>
                        <MudButton Variant="Variant.Text" Color="Color.Primary" EndIcon="@Icons.Material.Filled.ArrowForward">
                            View Demo
                        </MudButton>
                    </div>
                </div>
            </div>

            <!-- Environmental Monitoring -->
            <div class="demo-card" @onclick="@(() => NavigateTo("/environmental-monitoring"))">
                <div class="demo-card-image" style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);">
                    <MudIcon Icon="@Icons.Material.Filled.Co2" Class="demo-card-icon" />
                </div>
                <div class="demo-card-content">
                    <h3 class="demo-card-title">Environmental Monitoring</h3>
                    <p class="demo-card-description">
                        Sensor network dashboard with real-time air quality and temperature monitoring.
                        Timeline playback and trend analysis.
                    </p>
                    <div class="demo-card-tags">
                        <span class="demo-card-tag">Map</span>
                        <span class="demo-card-tag">Timeline</span>
                        <span class="demo-card-tag">Line Charts</span>
                        <span class="demo-card-tag">Legend</span>
                    </div>
                    <div class="demo-card-footer">
                        <span class="demo-card-complexity">
                            <MudIcon Icon="@Icons.Material.Filled.Speed" Size="Size.Small" /> Advanced
                        </span>
                        <MudButton Variant="Variant.Text" Color="Color.Primary" EndIcon="@Icons.Material.Filled.ArrowForward">
                            View Demo
                        </MudButton>
                    </div>
                </div>
            </div>

            <!-- Vehicle Tracking -->
            <div class="demo-card" @onclick="@(() => NavigateTo("/vehicle-tracking"))">
                <div class="demo-card-image" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                    <MudIcon Icon="@Icons.Material.Filled.LocalShipping" Class="demo-card-icon" />
                </div>
                <div class="demo-card-content">
                    <h3 class="demo-card-title">Vehicle Tracking</h3>
                    <p class="demo-card-description">
                        Fleet management system with real-time vehicle locations, status monitoring,
                        and route visualization.
                    </p>
                    <div class="demo-card-tags">
                        <span class="demo-card-tag">Map</span>
                        <span class="demo-card-tag">DataGrid</span>
                        <span class="demo-card-tag">Bar Chart</span>
                    </div>
                    <div class="demo-card-footer">
                        <span class="demo-card-complexity">
                            <MudIcon Icon="@Icons.Material.Filled.Speed" Size="Size.Small" /> Beginner
                        </span>
                        <MudButton Variant="Variant.Text" Color="Color.Primary" EndIcon="@Icons.Material.Filled.ArrowForward">
                            View Demo
                        </MudButton>
                    </div>
                </div>
            </div>

            <!-- Emergency Response -->
            <div class="demo-card" @onclick="@(() => NavigateTo("/emergency-response"))">
                <div class="demo-card-image" style="background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);">
                    <MudIcon Icon="@Icons.Material.Filled.LocalFireDepartment" Class="demo-card-icon" />
                </div>
                <div class="demo-card-content">
                    <h3 class="demo-card-title">Emergency Response</h3>
                    <p class="demo-card-description">
                        Incident management dashboard with multiple layers for fire stations, hospitals,
                        and police stations. Multi-layer filtering.
                    </p>
                    <div class="demo-card-tags">
                        <span class="demo-card-tag">Map</span>
                        <span class="demo-card-tag">Legend</span>
                        <span class="demo-card-tag">Filters</span>
                        <span class="demo-card-tag">Multi-layer</span>
                    </div>
                    <div class="demo-card-footer">
                        <span class="demo-card-complexity">
                            <MudIcon Icon="@Icons.Material.Filled.Speed" Size="Size.Small" /> Intermediate
                        </span>
                        <MudButton Variant="Variant.Text" Color="Color.Primary" EndIcon="@Icons.Material.Filled.ArrowForward">
                            View Demo
                        </MudButton>
                    </div>
                </div>
            </div>

            <!-- Urban Planning -->
            <div class="demo-card" @onclick="@(() => NavigateTo("/urban-planning"))">
                <div class="demo-card-image" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                    <MudIcon Icon="@Icons.Material.Filled.LocationCity" Class="demo-card-icon" />
                </div>
                <div class="demo-card-content">
                    <h3 class="demo-card-title">Urban Planning</h3>
                    <p class="demo-card-description">
                        City planning analysis with zoning layers, population density, infrastructure points,
                        and demographic charts.
                    </p>
                    <div class="demo-card-tags">
                        <span class="demo-card-tag">Map</span>
                        <span class="demo-card-tag">Multiple Charts</span>
                        <span class="demo-card-tag">Legend</span>
                        <span class="demo-card-tag">Basemaps</span>
                    </div>
                    <div class="demo-card-footer">
                        <span class="demo-card-complexity">
                            <MudIcon Icon="@Icons.Material.Filled.Speed" Size="Size.Small" /> Advanced
                        </span>
                        <MudButton Variant="Variant.Text" Color="Color.Primary" EndIcon="@Icons.Material.Filled.ArrowForward">
                            View Demo
                        </MudButton>
                    </div>
                </div>
            </div>

            <!-- Component Showcase -->
            <div class="demo-card" @onclick="@(() => NavigateTo("/component-showcase"))">
                <div class="demo-card-image" style="background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);">
                    <MudIcon Icon="@Icons.Material.Filled.Widgets" Class="demo-card-icon" />
                </div>
                <div class="demo-card-content">
                    <h3 class="demo-card-title">Component Showcase</h3>
                    <p class="demo-card-description">
                        Comprehensive demonstration of all MapSDK components and their capabilities.
                        Perfect for learning and reference.
                    </p>
                    <div class="demo-card-tags">
                        <span class="demo-card-tag">All Components</span>
                        <span class="demo-card-tag">Reference</span>
                        <span class="demo-card-tag">Examples</span>
                    </div>
                    <div class="demo-card-footer">
                        <span class="demo-card-complexity">
                            <MudIcon Icon="@Icons.Material.Filled.Speed" Size="Size.Small" /> All Levels
                        </span>
                        <MudButton Variant="Variant.Text" Color="Color.Primary" EndIcon="@Icons.Material.Filled.ArrowForward">
                            View Demo
                        </MudButton>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="features-section">
        <div class="features-container">
            <h2 class="section-title">Key Features</h2>
            <div class="features-grid">
                <div class="feature-item">
                    <div class="feature-icon">
                        <MudIcon Icon="@Icons.Material.Filled.Sync" />
                    </div>
                    <h3 class="feature-title">Zero-Config Auto-Sync</h3>
                    <p class="feature-description">
                        Components automatically synchronize with each other through ComponentBus.
                        No manual wiring required.
                    </p>
                </div>

                <div class="feature-item">
                    <div class="feature-icon">
                        <MudIcon Icon="@Icons.Material.Filled.Layers" />
                    </div>
                    <h3 class="feature-title">Rich Component Library</h3>
                    <p class="feature-description">
                        Maps, data grids, charts, legends, filters, search, and timeline components
                        work seamlessly together.
                    </p>
                </div>

                <div class="feature-item">
                    <div class="feature-icon">
                        <MudIcon Icon="@Icons.Material.Filled.Code" />
                    </div>
                    <h3 class="feature-title">Blazor Native</h3>
                    <p class="feature-description">
                        Built entirely in C# and Blazor. No JavaScript required in your application code.
                    </p>
                </div>

                <div class="feature-item">
                    <div class="feature-icon">
                        <MudIcon Icon="@Icons.Material.Filled.Speed" />
                    </div>
                    <h3 class="feature-title">High Performance</h3>
                    <p class="feature-description">
                        Optimized for large datasets with virtualization, lazy loading, and efficient rendering.
                    </p>
                </div>

                <div class="feature-item">
                    <div class="feature-icon">
                        <MudIcon Icon="@Icons.Material.Filled.DarkMode" />
                    </div>
                    <h3 class="feature-title">Dark Mode Support</h3>
                    <p class="feature-description">
                        All components support light and dark themes out of the box.
                    </p>
                </div>

                <div class="feature-item">
                    <div class="feature-icon">
                        <MudIcon Icon="@Icons.Material.Filled.Devices" />
                    </div>
                    <h3 class="feature-title">Fully Responsive</h3>
                    <p class="feature-description">
                        Works beautifully on desktop, tablet, and mobile devices with adaptive layouts.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Code Example Section -->
    <section class="code-section">
        <div class="code-container">
            <h2 class="section-title">Quick Start</h2>
            <p class="text-center mb-4" style="font-size: 1.1rem; color: var(--text-secondary);">
                Get started with just a few lines of code
            </p>
            <div class="code-example">
                <pre><code>&lt;!-- Simple property dashboard with auto-sync --&gt;
&lt;HonuaMap Id="property-map"
          MapStyle="https://basemaps.cartocdn.com/gl/voyager-gl-style/style.json"
          Center="new[] { -122.4194, 37.7749 }"
          Zoom="13" /&gt;

&lt;HonuaDataGrid TItem="PropertyFeature"
               SyncWith="property-map"
               DataSource="data/parcels.geojson"
               Title="Properties" /&gt;

&lt;HonuaChart Type="ChartType.Histogram"
            SyncWith="property-map"
            Field="assessedValue"
            Title="Property Values"
            Bins="10" /&gt;

&lt;HonuaFilterPanel SyncWith="property-map"
                  ShowSpatial="true"
                  ShowAttribute="true" /&gt;</code></pre>
            </div>
        </div>
    </section>
</div>

@code {
    [Inject]
    private NavigationManager NavigationManager { get; set; } = null!;

    private void NavigateTo(string url)
    {
        NavigationManager.NavigateTo(url);
    }
}
