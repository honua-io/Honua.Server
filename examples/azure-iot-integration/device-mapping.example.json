{
  "defaults": {
    "autoCreateThings": true,
    "autoCreateSensors": true,
    "autoCreateObservedProperties": true,
    "autoCreateDatastreams": true,
    "thingNameTemplate": "IoT Device: {deviceId}",
    "thingDescriptionTemplate": "Device {deviceId} connected via Azure IoT Hub",
    "defaultUnit": {
      "name": "unitless",
      "symbol": "",
      "definition": "http://www.qudt.org/qudt/owl/1.0.0/unit/Instances.html#Unitless"
    }
  },

  "deviceMappings": {
    "temp-sensor-*": {
      "thingNameTemplate": "Temperature Sensor {deviceId}",
      "thingDescriptionTemplate": "Environmental temperature sensor at location {deviceId}",
      "thingProperties": {
        "type": "temperature-sensor",
        "manufacturer": "ACME Sensors Inc."
      },
      "telemetryMappings": {
        "temperature": {
          "name": "Temperature",
          "description": "Ambient air temperature",
          "observationType": "http://www.opengis.net/def/observationType/OGC-OM/2.0/OM_Measurement",
          "unitOfMeasurement": {
            "name": "Degree Celsius",
            "symbol": "Â°C",
            "definition": "http://www.qudt.org/qudt/owl/1.0.0/unit/Instances.html#DegreeCelsius"
          },
          "observedPropertyName": "Air Temperature",
          "observedPropertyDefinition": "http://www.qudt.org/qudt/owl/1.0.0/quantity/Instances.html#Temperature",
          "observedPropertyDescription": "Temperature of the ambient air"
        },
        "humidity": {
          "name": "Relative Humidity",
          "description": "Relative humidity percentage",
          "unitOfMeasurement": {
            "name": "Percent",
            "symbol": "%",
            "definition": "http://www.qudt.org/qudt/owl/1.0.0/unit/Instances.html#Percent"
          },
          "observedPropertyName": "Relative Humidity",
          "observedPropertyDefinition": "http://www.qudt.org/qudt/owl/1.0.0/quantity/Instances.html#RelativeHumidity"
        }
      }
    },

    "pressure-sensor-*": {
      "thingNameTemplate": "Pressure Sensor {deviceId}",
      "telemetryMappings": {
        "pressure": {
          "name": "Atmospheric Pressure",
          "description": "Barometric pressure measurement",
          "unitOfMeasurement": {
            "name": "Hectopascal",
            "symbol": "hPa",
            "definition": "http://www.qudt.org/qudt/owl/1.0.0/unit/Instances.html#Hectopascal"
          },
          "observedPropertyName": "Atmospheric Pressure",
          "observedPropertyDefinition": "http://www.qudt.org/qudt/owl/1.0.0/quantity/Instances.html#Pressure"
        }
      }
    },

    "smart-meter-*": {
      "thingNameTemplate": "Smart Meter {deviceId}",
      "thingDescriptionTemplate": "Energy consumption meter",
      "telemetryMappings": {
        "power": {
          "name": "Power Consumption",
          "unitOfMeasurement": {
            "name": "Watt",
            "symbol": "W",
            "definition": "http://www.qudt.org/qudt/owl/1.0.0/unit/Instances.html#Watt"
          },
          "observedPropertyName": "Electric Power",
          "observedPropertyDefinition": "http://www.qudt.org/qudt/owl/1.0.0/quantity/Instances.html#Power"
        },
        "energy": {
          "name": "Energy Consumption",
          "unitOfMeasurement": {
            "name": "Kilowatt Hour",
            "symbol": "kWh",
            "definition": "http://www.qudt.org/qudt/owl/1.0.0/unit/Instances.html#KilowattHour"
          },
          "observedPropertyName": "Electric Energy",
          "observedPropertyDefinition": "http://www.qudt.org/qudt/owl/1.0.0/quantity/Instances.html#Energy"
        }
      }
    },

    "water-quality-*": {
      "thingNameTemplate": "Water Quality Sensor {deviceId}",
      "telemetryMappings": {
        "ph": {
          "name": "pH Level",
          "description": "Water pH measurement",
          "unitOfMeasurement": {
            "name": "pH",
            "symbol": "pH",
            "definition": "http://www.qudt.org/qudt/owl/1.0.0/unit/Instances.html#pH"
          },
          "observedPropertyName": "pH",
          "observedPropertyDefinition": "http://www.qudt.org/qudt/owl/1.0.0/quantity/Instances.html#pH"
        },
        "turbidity": {
          "name": "Turbidity",
          "unitOfMeasurement": {
            "name": "Nephelometric Turbidity Unit",
            "symbol": "NTU",
            "definition": "http://www.qudt.org/qudt/owl/1.0.0/unit/Instances.html#NTU"
          },
          "observedPropertyName": "Turbidity",
          "observedPropertyDefinition": "http://www.qudt.org/qudt/owl/1.0.0/quantity/Instances.html#Turbidity"
        },
        "dissolvedOxygen": {
          "name": "Dissolved Oxygen",
          "unitOfMeasurement": {
            "name": "Milligram per Liter",
            "symbol": "mg/L",
            "definition": "http://www.qudt.org/qudt/owl/1.0.0/unit/Instances.html#MilligramPerLiter"
          },
          "observedPropertyName": "Dissolved Oxygen",
          "observedPropertyDefinition": "http://www.qudt.org/qudt/owl/1.0.0/quantity/Instances.html#Concentration"
        }
      }
    }
  },

  "tenantMappings": [
    {
      "deviceIdPattern": "acme-*",
      "tenantId": "acme-corp",
      "priority": 10
    },
    {
      "deviceIdPattern": "customer1-*",
      "tenantId": "customer-001",
      "priority": 10
    },
    {
      "deviceIdPattern": "customer2-*",
      "tenantId": "customer-002",
      "priority": 10
    },
    {
      "propertyPath": "properties.tenantId",
      "tenantId": "{propertyValue}",
      "priority": 5
    },
    {
      "propertyPath": "properties.organizationId",
      "tenantId": "org-{propertyValue}",
      "priority": 3
    }
  ]
}
