{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    }
  },
  "LlmProvider": {
    "Provider": "Azure",
    "FallbackProvider": "OpenAI",
    "DefaultTemperature": 0.2,
    "DefaultMaxTokens": 4000,
    "Azure": {
      "EndpointUrl": "https://YOUR-RESOURCE.openai.azure.com/",
      "ApiKey": "${AZURE_OPENAI_API_KEY}",
      "DeploymentName": "gpt-4-turbo",
      "EmbeddingDeploymentName": "text-embedding-3-large",
      "DefaultModel": "gpt-4o",
      "DefaultEmbeddingModel": "text-embedding-3-large"
    }
  },
  "AzureAISearch": {
    "Endpoint": "https://YOUR-SEARCH-SERVICE.search.windows.net",
    "ApiKey": "${AZURE_SEARCH_API_KEY}",
    "IndexName": "deployment-knowledge"
  },
  "ConnectionStrings": {
    "PostgreSQL": "${POSTGRES_CONNECTION_STRING}"
  },
  "_comment": "IMPORTANT: Replace all ${VARIABLE} placeholders with environment variables",
  "_comment2": "NEVER commit actual secrets to this file",
  "_comment3": "For local development, create appsettings.Development.json (already in .gitignore)",
  "_usage": {
    "AZURE_OPENAI_API_KEY": "Your Azure OpenAI API key from Azure Portal",
    "AZURE_SEARCH_API_KEY": "Your Azure AI Search API key",
    "POSTGRES_CONNECTION_STRING": "Host=YOUR-HOST;Database=honua;Username=admin;Password=YOUR-PASSWORD;SSL Mode=Require"
  }
}
